@using Microsoft.EntityFrameworkCore
@{
    ViewData["Title"] = "Manage Promotions";
    var ev = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
    var usedPromos = ViewBag.UsedPromos as List<SmartTicketingSystem.Models.PROMO_CODE>;
    var availablePromos = ViewBag.AvailablePromos as List<SmartTicketingSystem.Models.PROMO_CODE>;
}

@inject SmartTicketingSystem.Data.ApplicationDbContext _context

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white border-0">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="fw-bold mb-2"><i class="fas fa-tags me-2"></i>Manage Promotions</h2>
                            <p class="mb-0 opacity-75">Event: @ev?.title</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a asp-controller="PROMO_CODE" asp-action="Create" asp-route-eventId="@ev?.eventID"
                               class="btn btn-light">
                                <i class="fas fa-plus-circle me-2"></i>Create New Promo
                            </a>
                            <a asp-action="Dashboard" class="btn btn-outline-light">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Active Promos -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Active Promos for this Event</h5>
        </div>
        <div class="card-body">
            @if (usedPromos != null && usedPromos.Any())
            {
                <div class="row g-4">
                    @foreach (var promo in usedPromos)
                    {
                        var usageCount = _context.BOOKING_PROMO
                        .Count(bp => bp.BookingCodeID == promo.PromoCodeID &&
                        bp.Booking.EventID == ev.eventID);

                        <div class="col-md-6 col-lg-4">
                            <div class="card promo-card h-100">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">@promo.code</h5>
                                </div>
                                <div class="card-body">
                                    <div class="promo-details mb-3">
                                        @if (promo.DiscountType == "Percentage")
                                        {
                                            <h3 class="text-success">@promo.DiscountValue% OFF</h3>
                                        }
                                        else
                                        {
                                            <h3 class="text-success">Rs. @promo.DiscountValue.ToString("N2") OFF</h3>
                                        }
                                        <p class="text-muted mb-0">
                                            <i class="fas fa-calendar-alt me-2"></i>Valid until @promo.endDate.ToString("MMM dd, yyyy")
                                        </p>
                                    </div>

                                    <div class="usage-stats mb-3">
                                        <small class="text-muted d-block">Usage Statistics</small>
                                        <div class="d-flex justify-content-between">
                                            <span>Times Used:</span>
                                            <span class="badge bg-info">@usageCount</span>
                                        </div>
                                    </div>

                                    <div class="d-grid">
                                        <a asp-controller="PROMO_CODE" asp-action="Details" asp-route-id="@promo.PromoCodeID"
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-chart-line me-2"></i>View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted text-center mb-0">No promos have been used for this event yet.</p>
            }
        </div>
    </div>

    <!-- Available Promos -->
    @if (availablePromos != null && availablePromos.Any())
    {
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-box-open me-2"></i>Available Promos to Assign</h5>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    @foreach (var promo in availablePromos)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card promo-card h-100">
                                <div class="card-header bg-info text-white">
                                    <h5 class="mb-0">@promo.code</h5>
                                </div>
                                <div class="card-body">
                                    <div class="promo-details mb-3">
                                        @if (promo.DiscountType == "Percentage")
                                        {
                                            <h3 class="text-info">@promo.DiscountValue% OFF</h3>
                                        }
                                        else
                                        {
                                            <h3 class="text-info">Rs. @promo.DiscountValue.ToString("N2") OFF</h3>
                                        }
                                        <p class="text-muted mb-0">
                                            <i class="fas fa-calendar-alt me-2"></i>Valid until @promo.endDate.ToString("MMM dd, yyyy")
                                        </p>
                                    </div>

                                    <div class="d-grid">
                                        <form asp-controller="PROMO_CODE" asp-action="AssignToEvent" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="promoId" value="@promo.PromoCodeID" />
                                            <input type="hidden" name="eventId" value="@ev?.eventID" />
                                            <button type="submit" class="btn btn-success w-100">
                                                <i class="fas fa-plus-circle me-2"></i>Use for this Event
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #4361ee, #7209b7);
    }

    .promo-card {
        border: none;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        transition: all 0.3s;
    }

        .promo-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(67,97,238,0.15);
        }

    .promo-details {
        background: #f8f9fa;
        padding: 1rem;
        border-radius: 8px;
        text-align: center;
    }

    .usage-stats {
        background: #f8f9fa;
        padding: 0.5rem;
        border-radius: 8px;
    }
</style>