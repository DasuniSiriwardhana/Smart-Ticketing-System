@model IEnumerable<SmartTicketingSystem.Models.TICKET>
@{
    ViewData["Title"] = "TICKETS";
    var returnUrl = Context.Request.Headers["Referer"].ToString();
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
            <a href="@(string.IsNullOrEmpty(returnUrl) ? "/" : returnUrl)" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
            <h1 class="mb-0"><i class="fas fa-qrcode"></i> Tickets Management</h1>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New
        </a>
    </div>

    <!-- Search Form -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Search" method="get" class="mb-4">
                <div class="row g-3 align-items-end">

                    <div class="col-md-3">
                        <label class="form-label">Search Mode</label>
                        <select class="form-select" name="mode" id="modeSelect">
                            <option value="TicketID">Ticket ID</option>
                            <option value="BookingID">Booking ID</option>
                            <option value="QRCode">QR Code</option>
                            <option value="DateRange">Issued Date Range</option>
                            <option value="Advanced">Advanced (Multiple)</option>
                        </select>
                    </div>

                    <div class="col-md-3 filter-field" data-mode="TicketID">
                        <label class="form-label">Ticket ID</label>
                        <input type="number" class="form-control" name="ticketId"
                               value="@Context.Request.Query["ticketId"]" />
                    </div>

                    <div class="col-md-3 filter-field" data-mode="BookingID">
                        <label class="form-label">Booking ID</label>
                        <input type="number" class="form-control" name="bookingId"
                               value="@Context.Request.Query["bookingId"]" />
                    </div>

                    <div class="col-md-3 filter-field" data-mode="QRCode">
                        <label class="form-label">QR Code</label>
                        <input type="text" class="form-control" name="qrCodeValue"
                               value="@Context.Request.Query["qrCodeValue"]" />
                    </div>

                    <div class="col-md-3 filter-field" data-mode="DateRange">
                        <label class="form-label">From</label>
                        <input type="date" class="form-control" name="fromDate"
                               value="@Context.Request.Query["fromDate"]" />
                    </div>

                    <div class="col-md-3 filter-field" data-mode="DateRange">
                        <label class="form-label">To</label>
                        <input type="date" class="form-control" name="toDate"
                               value="@Context.Request.Query["toDate"]" />
                    </div>

                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="fas fa-times"></i> Clear
                        </a>
                    </div>

                </div>
            </form>
        </div>
    </div>

    <!-- Tickets Table -->
    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Ticket ID</th>
                        <th>Booking ID</th>
                        <th>Booking Ref</th>
                        <th>Event</th>
                        <th>User</th>
                        <th>QR Code</th>
                        <th>Issued At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TicketID</td>
                            <td>@item.BookingID</td>
                            <td>@item.Booking?.BookingReference</td>
                            <td>@item.Booking?.Event?.title</td>
                            <td>@item.Booking?.User?.Email</td>
                            <td>
                                <img src="@Url.Action("Qr", new { id = item.TicketID })"
                                     style="width: 50px; height: 50px; cursor: pointer;"
                                     onclick="window.open('@Url.Action("Qr", new { id = item.TicketID })', '_blank')"
                                     title="Click to enlarge" />
                            </td>
                            <td>@item.issuedAt.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@item.TicketID" class="btn btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.TicketID" class="btn btn-outline-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TicketID" class="btn btn-outline-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Bottom Navigation -->
    <div class="mt-4 d-flex justify-content-center">
        <a href="javascript:history.back()" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Go Back
        </a>
    </div>
</div>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
                matching.forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>