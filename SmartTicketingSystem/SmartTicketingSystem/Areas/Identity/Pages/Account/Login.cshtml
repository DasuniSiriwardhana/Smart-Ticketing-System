@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "/Areas/Identity/Pages/Account/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card border-0 shadow-lg overflow-hidden">
            <div class="row g-0">
                <!-- Left Side - Branding -->
                <div class="col-md-5 bg-gradient-primary text-white p-4 d-flex flex-column justify-content-center">
                    <div class="text-center mb-4">
                        <i class="fas fa-ticket-alt fa-4x mb-3"></i>
                        <h3 class="fw-bold">Welcome Back!</h3>
                        <p class="opacity-75">Sign in to access your account</p>
                    </div>
                    <div class="mt-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle me-2"></i>
                            <span>Book tickets easily</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle me-2"></i>
                            <span>View your bookings</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle me-2"></i>
                            <span>Get QR tickets</span>
                        </div>
                        <div class="d-flex align-items-center mb-3">
                            <i class="fas fa-check-circle me-2"></i>
                            <span>Manage events</span>
                        </div>
                    </div>
                </div>

                <!-- Right Side - Login Form -->
                <div class="col-md-7 p-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold">Sign In</h4>
                        <p class="text-muted">Enter your credentials to access your account</p>
                    </div>

                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email Address</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">Remember me</label>
                            </div>
                            <a asp-page="./ForgotPassword" class="text-decoration-none small">Forgot password?</a>
                        </div>

                        <div class="d-grid gap-2">
                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Log in
                            </button>
                        </div>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                Don't have an account?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-decoration-none fw-bold">Register here</a>
                            </p>
                        </div>
                    </form>

                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center">
                            <p class="text-muted mb-3">Or continue with</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="d-flex gap-2 justify-content-center">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                        <i class="fab fa-@provider.Name.ToLower()"></i> @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}