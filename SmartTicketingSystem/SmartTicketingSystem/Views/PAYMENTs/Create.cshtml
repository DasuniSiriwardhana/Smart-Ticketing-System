@model SmartTicketingSystem.Models.PAYMENT

@{
    ViewData["Title"] = "Create Payment";
}

<h2 class="mb-3">Complete Your Payment</h2>
<hr />

<div class="row">
    <div class="col-md-5">

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <!-- Booking Selection -->
            <div class="form-group mb-3">
                <label asp-for="BookingID" class="form-label"></label>
                <select asp-for="BookingID" class="form-select" asp-items="ViewBag.BookingID">

                    <option value="">-- Select Booking --</option>
                </select>
                <span asp-validation-for="BookingID" class="text-danger"></span>
            </div>

            <!-- Payment Type -->
            <div class="form-group mb-3">
                <label asp-for="PaymentType" class="form-label"></label>
                <select asp-for="PaymentType"
                        class="form-control"
                        asp-items="ViewBag.PaymentType">
                    <option value="">-- Select Type --</option>
                </select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>

            <!-- Payment Method -->
            <div class="form-group mb-3">
                <label asp-for="PaymentMethod" class="form-label"></label>
                <select asp-for="PaymentMethod"
                        class="form-control"
                        asp-items="ViewBag.PaymentMethod">
                    <option value="">-- Select Method --</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <!-- Optional Transaction Reference -->
            <div class="form-group mb-3">
                <label asp-for="TransactionReference" class="form-label"></label>
                <input asp-for="TransactionReference"
                       class="form-control"
                       placeholder="Leave empty to auto-generate" />
                <span asp-validation-for="TransactionReference" class="text-danger"></span>
            </div>

            <!-- Notice -->
            <div class="alert alert-info">
                The system will automatically calculate the payment amount
                based on your booking.
            </div>

            <!-- Submit -->
            <div class="form-group">
                <button type="submit" class="btn btn-success w-100">
                    Pay Now
                </button>
            </div>

        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="BOOKINGs" asp-action="Index" class="btn btn-secondary">
        Back to My Bookings
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
