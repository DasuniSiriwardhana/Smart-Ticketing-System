<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="MemberID">Member ID</option>
                <option value="UniversityNumber">University Number</option>
                <option value="FullName">Full Name</option>
                <option value="Email">Email</option>
                <option value="Phone">Phone</option>
                <option value="UserType">User Type</option>
                <option value="Verified">Verified</option>
                <option value="Status">Status</option>
                <option value="DateRange">Created Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="MemberID">
            <label class="form-label">Member ID</label>
            <input type="number" class="form-control" name="memberId"
                   value="@Context.Request.Query["memberId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UniversityNumber">
            <label class="form-label">University Number</label>
            <input type="text" class="form-control" name="universityNumber"
                   value="@Context.Request.Query["universityNumber"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="FullName">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName"
                   value="@Context.Request.Query["fullName"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Email">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" name="email"
                   value="@Context.Request.Query["email"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Phone">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" name="phone"
                   value="@Context.Request.Query["phone"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UserType">
            <label class="form-label">User Type</label>
            <select class="form-select" name="userType">
                <option value="">Select</option>
                <option value="Admin" selected="@(Context.Request.Query["userType"] == "Admin")">Admin</option>
                <option value="Organizer" selected="@(Context.Request.Query["userType"] == "Organizer")">Organizer</option>
                <option value="Student" selected="@(Context.Request.Query["userType"] == "Student")">Student</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="Verified">
            <label class="form-label">Verified</label>
            <select class="form-select" name="isVerified">
                <option value="">Select</option>
                <option value="Y" selected="@(Context.Request.Query["isVerified"] == "Y")">Yes</option>
                <option value="N" selected="@(Context.Request.Query["isVerified"] == "N")">No</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Select</option>
                <option value="Active" selected="@(Context.Request.Query["status"] == "Active")">Active</option>
                <option value="Inactive" selected="@(Context.Request.Query["status"] == "Inactive")">Inactive</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Member ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>User Type</th>
            <th>University No</th>
            <th>Verified</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Approval ID</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.member_id</td>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.phone</td>
            <td>@item.userType</td>
            <td>@item.UniversityNumber</td>
            <td>@(item.isverified == 'Y' ? "Yes" : "No")</td>
            <td>@item.status</td>
            <td>@item.createdAt</td>
            <td>@item.ApprovalID</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.member_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.member_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.member_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
(function () {
    const modeSelect = document.getElementById("modeSelect");
    const fields = Array.from(document.querySelectorAll(".filter-field"));

    function updateVisibility() {
        const mode = modeSelect.value;

        if (mode === "Advanced") {
            fields.forEach(f => f.classList.remove("d-none"));
        } else {
            fields.forEach(f => f.classList.add("d-none"));
            const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
            matching.forEach(f => f.classList.remove("d-none"));
        }
    }

    const params = new URLSearchParams(window.location.search);
    const savedMode = params.get("mode");
    if (savedMode) modeSelect.value = savedMode;

    modeSelect.addEventListener("change", updateVisibility);
    updateVisibility();
})();
</script>

