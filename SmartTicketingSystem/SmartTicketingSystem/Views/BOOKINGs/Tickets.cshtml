@model IEnumerable<SmartTicketingSystem.Models.TICKET>
@{
    ViewData["Title"] = "My Tickets";
    var booking = ViewBag.Booking as SmartTicketingSystem.Models.BOOKING;
    var ev = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
}

<div class="container py-4">
    <!-- Header with Back Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1"><i class="fas fa-qrcode"></i> My Tickets</h2>
            <p class="text-muted">
                Event: @(ev?.title ?? booking?.Event?.title)<br />
                Booking: @booking?.BookingReference
            </p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@booking?.BookingID" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Booking
            </a>
            <a asp-action="MyBookings" class="btn btn-outline-primary ms-2">
                <i class="fas fa-list"></i> All Bookings
            </a>
        </div>
    </div>

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i> @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-ticket-alt fa-4x text-muted mb-3"></i>
                <h4>No Tickets Available</h4>
                <p class="text-muted">Tickets will appear here after payment is confirmed.</p>
                <a asp-action="Details" asp-route-id="@booking?.BookingID" class="btn btn-primary">
                    Back to Booking
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var ticket in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm ticket-card">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Ticket #@ticket.TicketID</h5>
                        </div>
                        <div class="card-body text-center">
                            <!-- QR Code -->
                            <img src="@Url.Action("Qr", "TICKETs", new { id = ticket.TicketID })"
                                 alt="QR Code"
                                 class="img-fluid mb-3 qr-code"
                                 style="width: 150px; height: 150px; cursor: pointer;"
                                 onclick="showQRModal('@Url.Action("Qr", "TICKETs", new { id = ticket.TicketID })', '@ticket.TicketID')" />

                            <p class="mb-1"><strong>Issued:</strong> @ticket.issuedAt.ToString("MMM dd, yyyy HH:mm")</p>

                            <div class="btn-group mt-2">
                                <a href="@Url.Action("Download", "TICKETs", new { id = ticket.TicketID })"
                                   class="btn btn-sm btn-outline-primary" download>
                                    <i class="fas fa-download"></i> Download
                                </a>
                                <button class="btn btn-sm btn-outline-info" onclick="printTicket(@ticket.TicketID)">
                                    <i class="fas fa-print"></i> Print
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- QR Code Modal -->
<div class="modal fade" id="qrModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="fas fa-qrcode me-2"></i>Ticket QR Code</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center p-4">
                <img src="" id="qrImage" class="img-fluid mb-3" style="width: 200px; height: 200px;">
                <p id="qrTicketId" class="text-muted mb-3"></p>
                <div class="d-grid gap-2">
                    <a href="" id="downloadLink" class="btn btn-primary" download>
                        <i class="fas fa-download me-2"></i>Download QR Code
                    </a>
                    <button class="btn btn-outline-secondary" onclick="printQR()">
                        <i class="fas fa-print me-2"></i>Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentQRUrl = '';

        function showQRModal(imageUrl, ticketId) {
            currentQRUrl = imageUrl;
            $('#qrImage').attr('src', imageUrl);
            $('#qrTicketId').text('Ticket #' + ticketId);
            $('#downloadLink').attr('href', imageUrl);
            $('#qrModal').modal('show');
        }

        function printTicket(ticketId) {
            var printWindow = window.open('@Url.Action("Qr", "TICKETs")/' + ticketId, '_blank');
            if (printWindow) {
                printWindow.onload = function() {
                    setTimeout(function() {
                        printWindow.print();
                    }, 500);
                };
            }
        }

        function printQR() {
            var printWindow = window.open(currentQRUrl, '_blank');
            if (printWindow) {
                printWindow.onload = function() {
                    setTimeout(function() {
                        printWindow.print();
                    }, 500);
                };
            }
        }

        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

<style>
    .ticket-card {
        border: none;
        transition: all 0.3s;
    }

        .ticket-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }

    .qr-code {
        cursor: pointer;
        transition: all 0.3s;
    }

        .qr-code:hover {
            transform: scale(1.1);
        }

    .btn-group {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
    }
</style>