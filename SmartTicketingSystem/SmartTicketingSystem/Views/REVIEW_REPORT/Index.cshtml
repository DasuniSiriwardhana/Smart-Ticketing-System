<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="ReportID">Report ID</option>
                <option value="ReviewID">Review ID</option>
                <option value="ReportedByUserID">Reported By User ID</option>
                <option value="ReportReason">Report Reason</option>
                <option value="ReportDetail">Report Detail</option>
                <option value="DateRange">Reported Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="ReportID">
            <label class="form-label">Report ID</label>
            <input type="number" class="form-control" name="reportId"
                   value="@Context.Request.Query["reportId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ReviewID">
            <label class="form-label">Review ID</label>
            <input type="number" class="form-control" name="reviewId"
                   value="@Context.Request.Query["reviewId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ReportedByUserID">
            <label class="form-label">Reported By User ID</label>
            <input type="number" class="form-control" name="reportedByUserId"
                   value="@Context.Request.Query["reportedByUserId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ReportReason">
            <label class="form-label">Report Reason</label>
            <input type="text" class="form-control" name="reportReason"
                   value="@Context.Request.Query["reportReason"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ReportDetail">
            <label class="form-label">Report Detail</label>
            <input type="text" class="form-control" name="reportDetail"
                   value="@Context.Request.Query["reportDetail"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Report ID</th>
            <th>Review ID</th>
            <th>Reported By User ID</th>
            <th>Reason</th>
            <th>Detail</th>
            <th>Reported At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.RportID</td>
            <td>@item.ReviewID</td>
            <td>@item.ReportedByUserID</td>
            <td>@item.ReportReason</td>
            <td>@item.ReportDetail</td>
            <td>@item.ReportedAt</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RportID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RportID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RportID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
(function () {
    const modeSelect = document.getElementById("modeSelect");
    const fields = Array.from(document.querySelectorAll(".filter-field"));

    function updateVisibility() {
        const mode = modeSelect.value;

        if (mode === "Advanced") {
            fields.forEach(f => f.classList.remove("d-none"));
        } else {
            fields.forEach(f => f.classList.add("d-none"));
            const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
            matching.forEach(f => f.classList.remove("d-none"));
        }
    }

    const params = new URLSearchParams(window.location.search);
    const savedMode = params.get("mode");
    if (savedMode) modeSelect.value = savedMode;

    modeSelect.addEventListener("change", updateVisibility);
    updateVisibility();
})();
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReportedByUserID)
            </th>
            <th>
