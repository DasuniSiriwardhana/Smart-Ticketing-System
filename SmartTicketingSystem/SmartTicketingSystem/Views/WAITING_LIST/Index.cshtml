@model IEnumerable<SmartTicketingSystem.Models.WAITING_LIST>

@{
    ViewData["Title"] = "WAITING LIST";
}

<h1>WAITING LIST</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="WaitingListID">WaitingList ID</option>
                <option value="EventID">Event ID</option>
                <option value="UserID">User ID</option>
                <option value="Status">Status</option>
                <option value="DateRange">Added Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="WaitingListID">
            <label class="form-label">WaitingList ID</label>
            <input type="number" class="form-control" name="waitingListId"
                   value="@Context.Request.Query["waitingListId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventID">
            <label class="form-label">Event ID</label>
            <input type="number" class="form-control" name="eventId"
                   value="@Context.Request.Query["eventId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UserID">
            <label class="form-label">User ID</label>
            <input type="number" class="form-control" name="userId"
                   value="@Context.Request.Query["userId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Select</option>
                <option value="Pending" selected="@(Context.Request.Query["status"] == "Pending")">Pending</option>
                <option value="Notified" selected="@(Context.Request.Query["status"] == "Notified")">Notified</option>
                <option value="Removed" selected="@(Context.Request.Query["status"] == "Removed")">Removed</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>WaitingList ID</th>
            <th>Event ID</th>
            <th>User ID</th>
            <th>Added At</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.WaitingListID</td>
                <td>@item.EventID</td>
                <td>@item.UserID</td>
                <td>@item.AddedAt</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.WaitingListID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.WaitingListID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.WaitingListID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
                matching.forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
