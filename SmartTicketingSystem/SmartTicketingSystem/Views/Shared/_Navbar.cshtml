@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
            <i class="fas fa-ticket-alt me-2"></i>
            <span class="fw-bold">SmartTicket</span>
        </a>

        <!-- Mobile Toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Main Navigation -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-1"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "EVENTs" ? "active" : "")"
                       asp-controller="EVENTs" asp-action="Index">
                        <i class="fas fa-calendar-alt me-1"></i> Events
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")"
                       asp-controller="Home" asp-action="About">
                        <i class="fas fa-info-circle me-1"></i> About
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                       asp-controller="Home" asp-action="Contact">
                        <i class="fas fa-envelope me-1"></i> Contact
                    </a>
                </li>
            </ul>

            <!-- User Menu -->
            @if (SignInManager.IsSignedIn(User))
            {
                var userName = User.Identity?.Name ?? "User";
                <div class="dropdown">
                    <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-user-circle me-2"></i>@userName
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (User.IsInRole("Admin"))
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        }
                        else if (User.IsInRole("Organizer"))
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="Organizer" asp-action="Dashboard">
                                    <i class="fas fa-chart-line me-2"></i>Organizer Dashboard
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        }
                        else
                        {
                            <li>
                                <a class="dropdown-item" asp-controller="BOOKINGs" asp-action="MyBookings">
                                    <i class="fas fa-ticket-alt me-2"></i>My Bookings
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="TICKETs" asp-action="MyTickets">
                                    <i class="fas fa-qrcode me-2"></i>My Tickets
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                        }
                        <li>
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            }
            else
            {
                <div class="d-flex gap-2">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light">
                        <i class="fas fa-user-plus me-2"></i>Register
                    </a>
                </div>
            }
        </div>
    </div>
</nav>