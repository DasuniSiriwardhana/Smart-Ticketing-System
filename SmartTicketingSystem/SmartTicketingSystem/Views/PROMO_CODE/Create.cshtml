@model SmartTicketingSystem.Models.PROMO_CODE
@{
    ViewData["Title"] = "Create Promo Code";
    var currentEvent = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
    var discountTypes = ViewBag.DiscountTypes as SelectList;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-tag"></i> Create New Promo Code
                        @if (currentEvent != null)
                        {
                            <span class="fs-6">for @currentEvent.title</span>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (ViewBag.EventId != null)
                        {
                            <input type="hidden" name="eventId" value="@ViewBag.EventId" />
                        }

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="code" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        <input asp-for="code" class="form-control"
                                               placeholder="e.g., SAVE10, WELCOME20"
                                               maxlength="50" />
                                    </div>
                                    <span asp-validation-for="code" class="text-danger"></span>
                                    <small class="text-muted">Unique code customers will enter</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DiscountType" class="form-label fw-bold"></label>
                                    <select asp-for="DiscountType" class="form-select" asp-items="discountTypes">
                                        <option value="">-- Select Discount Type --</option>
                                    </select>
                                    <span asp-validation-for="DiscountType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DiscountValue" class="form-label fw-bold"></label>
                                    <div class="input-group">
                                        <span class="input-group-text" id="discount-symbol">%</span>
                                        <input asp-for="DiscountValue" class="form-control" type="number"
                                               step="0.01" min="0" id="DiscountValue" />
                                    </div>
                                    <span asp-validation-for="DiscountValue" class="text-danger"></span>
                                    <small class="text-muted" id="discount-hint">
                                        Enter percentage (1-100) or fixed amount
                                    </small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Preview Discount</label>
                                    <div class="alert alert-info" id="preview-discount">
                                        <strong>Example:</strong> On a Rs. 1000 booking,
                                        <span id="example-discount">Rs. 0 off</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="startDate" class="form-label fw-bold"></label>
                                    <input asp-for="startDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="startDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="endDate" class="form-label fw-bold"></label>
                                    <input asp-for="endDate" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="endDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3 form-check">
                                    <input asp-for="IsActiveBool" class="form-check-input" checked />
                                    <label asp-for="IsActiveBool" class="form-check-label fw-bold">
                                        Active immediately
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i>
                            <strong>Important Notes:</strong>
                            <ul class="mb-0 mt-1">
                                <li>Promo codes are case-sensitive</li>
                                <li>Percentage discounts must be between 1 and 100</li>
                                <li>Fixed discounts cannot exceed the booking total</li>
                                <li>Users can only use one promo per booking</li>
                            </ul>
                        </div>

                        <div class="d-flex gap-2 mt-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Promo Code
                            </button>
                            <a asp-action="Index" asp-route-eventId="@ViewBag.EventId"
                               class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Update discount symbol based on type
            function updateDiscountSymbol() {
                var type = $('#DiscountType').val();
                if (type === 'Percentage') {
                    $('#discount-symbol').text('%');
                    $('#discount-hint').text('Enter percentage (1-100)');
                } else if (type === 'Fixed') {
                    $('#discount-symbol').text('Rs.');
                    $('#discount-hint').text('Enter fixed amount in Rupees');
                } else {
                    $('#discount-symbol').text('?');
                }
                updatePreview();
            }

            // Update preview discount
            function updatePreview() {
                var type = $('#DiscountType').val();
                var value = parseFloat($('#DiscountValue').val()) || 0;
                var exampleTotal = 1000;
                var discount = 0;

                if (type === 'Percentage' && value <= 100) {
                    discount = exampleTotal * (value / 100);
                    $('#example-discount').text('Rs. ' + discount.toFixed(2) + ' off');
                } else if (type === 'Fixed') {
                    discount = Math.min(value, exampleTotal);
                    $('#example-discount').text('Rs. ' + discount.toFixed(2) + ' off');
                } else {
                    $('#example-discount').text('Rs. 0 off');
                }
            }

            $('#DiscountType').change(updateDiscountSymbol);
            $('#DiscountValue').on('input', updatePreview);

            // Set default dates
            if (!$('#startDate').val()) {
                var now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                $('#startDate').val(now.toISOString().slice(0, 16));
            }

            if (!$('#endDate').val()) {
                var end = new Date();
                end.setMonth(end.getMonth() + 1);
                end.setMinutes(end.getMinutes() - end.getTimezoneOffset());
                $('#endDate').val(end.toISOString().slice(0, 16));
            }

            // Validate that end date is after start date
            $('#endDate').change(function() {
                var start = new Date($('#startDate').val());
                var end = new Date($(this).val());

                if (end <= start) {
                    alert('End date must be after start date');
                    $(this).val($('#startDate').val());
                }
            });

            // Validate percentage range
            $('#DiscountValue').on('change', function() {
                var type = $('#DiscountType').val();
                var value = parseFloat($(this).val());

                if (type === 'Percentage' && (value < 0 || value > 100)) {
                    alert('Percentage must be between 0 and 100');
                    $(this).val(0);
                }
            });
        });
    </script>
}