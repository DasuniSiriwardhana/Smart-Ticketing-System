@model IEnumerable<SmartTicketingSystem.Models.BOOKING>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Search" method="get" class="mb-3">
    <div class="row g-2 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="BookingID">Booking ID</option>
                <option value="member_id">Member ID</option>
                <option value="EventID">Event ID</option>
                <option value="BookingStatus">Booking Status</option>
                <option value="PaymentStatus">Payment Status</option>
                <option value="Reference">Booking Reference</option>
                <option value="Advanced">Advanced</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="BookingID">
            <input type="number" class="form-control" name="bookingId" placeholder="Booking ID" />
        </div>

        <div class="col-md-3 filter-field" data-mode="member_id">
            <input type="number" class="form-control" name="member_id" placeholder="Member ID" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventID">
            <input type="number" class="form-control" name="eventId" placeholder="Event ID" />
        </div>

        <div class="col-md-3 filter-field" data-mode="BookingStatus">
            <input type="text" class="form-control" name="bookingStatus" placeholder="Booking Status" />
        </div>

        <div class="col-md-3 filter-field" data-mode="PaymentStatus">
            <input type="text" class="form-control" name="paymentStatus" placeholder="Payment Status" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Reference">
            <input type="text" class="form-control" name="bookingReference" placeholder="Booking Reference" />
        </div>

        <div class="col-md-3">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>

</form>
<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = document.querySelectorAll(".filter-field");

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                const target = document.querySelector(`.filter-field[data-mode="${mode}"]`);
                if (target) target.classList.remove("d-none");
            }
        }

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingReference)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CancellationReason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CancelledAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookingReference)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.member_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EventID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BookingStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancellationReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancelledAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BookingID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BookingID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BookingID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
