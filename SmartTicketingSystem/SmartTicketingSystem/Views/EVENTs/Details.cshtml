@model SmartTicketingSystem.Models.ViewModels.EventDetailsVM

@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-4">
        <!-- LEFT: Event info -->
        <div class="col-lg-7">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <span class="badge bg-info text-dark">@Model.Event.visibility</span>
                        <span class="badge bg-secondary">@Model.Event.status</span>
                        <span class="badge bg-dark">
                            Remaining: @Model.RemainingEventCapacity / @Model.Event.capacity
                        </span>
                    </div>

                    <h2 class="mb-2">@Model.Event.title</h2>
                    <div class="text-muted mb-3">
                        @Model.Event.venue •
                        @Model.Event.StartDateTime.ToString("yyyy-MM-dd HH:mm")
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Event.Description))
                    {
                        <p class="mb-4">@Model.Event.Description</p>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light border rounded-4">
                                <div class="fw-semibold mb-1">Start</div>
                                <div>@Model.Event.StartDateTime</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light border rounded-4">
                                <div class="fw-semibold mb-1">End</div>
                                <div>@Model.Event.endDateTime</div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 flex-wrap">
                        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>

                        @* Admin/Organizer controls *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <a class="btn btn-outline-dark"
                               asp-action="Edit"
                               asp-route-id="@Model.Event.eventID">
                                Edit
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: Booking -->
        <div class="col-lg-5">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h4 class="mb-2">Book Tickets</h4>
                    <div class="text-muted mb-3">
                        Select quantities. You can pay later to receive QR tickets.
                    </div>

                    @* If user is NOT logged in -> show login message *@
                    @if (!(User?.Identity?.IsAuthenticated ?? false))
                    {
                        <div class="alert alert-info mb-0">
                            Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to book tickets.
                        </div>
                    }
                    else
                    {
                        @* Only members can book (ExternalMember/UniversityMember/Organizer/Admin) *@
                        @if (!(User.IsInRole("ExternalMember") || User.IsInRole("UniversityMember") || User.IsInRole("Organizer") || User.IsInRole("Admin")))
                        {
                            <div class="alert alert-warning mb-0">
                                Your account does not have permission to book tickets.
                            </div>
                        }
                        else
                        {
                            @* If no ticket types available *@
                            if (Model.TicketTypes == null || Model.TicketTypes.Count == 0)
                            {
                                <div class="alert alert-warning mb-0">
                                    No ticket types available for this event.
                                </div>
                            }
                            else
                            {
                                @* If event full -> show waiting list button only *@
                                if (Model.RemainingEventCapacity <= 0)
                                {
                                    <div class="alert alert-warning">
                                        This event is currently full.
                                    </div>

                                    <form asp-action="JoinWaitingList" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="eventId" value="@Model.Event.eventID" />
                                        <button type="submit" class="btn btn-outline-warning w-100">
                                            Join Waiting List
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    @* Normal booking form *@
                                    <form asp-action="BookNow" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="eventId" value="@Model.Event.eventID" />

                                        <div class="d-grid gap-3">
                                            @foreach (var tt in Model.TicketTypes)
                                            {
                                                var remaining = Model.RemainingByTicketType.ContainsKey(tt.TicketID)
                                                ? Model.RemainingByTicketType[tt.TicketID]
                                                : 0;

                                                <div class="border rounded-4 p-3">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <div class="fw-semibold">@tt.TypeName</div>
                                                            <div class="text-muted" style="font-size:0.9rem;">
                                                                Rs @tt.Price • Remaining: @remaining
                                                            </div>
                                                        </div>

                                                        <div style="width:110px;">
                                                            <label class="form-label mb-1" style="font-size:0.85rem;">Qty</label>
                                                            <input type="number"
                                                                   class="form-control"
                                                                   min="0"
                                                                   max="@remaining"
                                                                   name="quantities[@tt.TicketID]"
                                                                   value="0"
                                                            @(remaining <= 0 ? "disabled" : "") />
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>

                                        <button type="submit" class="btn btn-primary w-100 mt-3">
                                            Book Now
                                        </button>
                                    </form>
                                }
                            }
                        }
                    }
                </div>
            </div>

            <div class="text-muted mt-3" style="font-size:0.9rem;">
                After payment, the system generates a QR ticket per seat.
            </div>
        </div>
    </div>
</div>
