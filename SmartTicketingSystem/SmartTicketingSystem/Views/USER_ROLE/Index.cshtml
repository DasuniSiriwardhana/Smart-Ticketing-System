    <a asp-action="Create" class="btn btn-primary">Assign Role</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="UserRoleID">UserRole ID</option>
                <option value="RoleID">Role ID</option>
                <option value="UserID">User ID</option>
                <option value="MemberID">Member ID</option>
                <option value="DateRange">Assigned Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="UserRoleID">
            <label>UserRole ID</label>
            <input type="number" name="userRoleId" class="form-control" />
        </div>

        <div class="col-md-3 filter-field" data-mode="RoleID">
            <label>Role ID</label>
            <input type="number" name="roleId" class="form-control" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UserID">
            <label>User ID</label>
            <input type="number" name="userId" class="form-control" />
        </div>

        <div class="col-md-3 filter-field" data-mode="MemberID">
            <label>Member ID</label>
            <input type="number" name="memberId" class="form-control" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label>From</label>
            <input type="date" name="fromDate" class="form-control" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label>To</label>
            <input type="date" name="toDate" class="form-control" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>UserRoleID</th>
            <th>RoleID</th>
            <th>UserID</th>
            <th>MemberID</th>
            <th>Assigned At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.UserRoleID</td>
            <td>@item.roleID</td>
            <td>@item.userID</td>
            <td>@item.member_id</td>
            <td>@item.AssignedAt</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserRoleID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserRoleID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserRoleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
(function () {
    const modeSelect = document.getElementById("modeSelect");
    const fields = Array.from(document.querySelectorAll(".filter-field"));

    function updateVisibility() {
        const mode = modeSelect.value;

        if (mode === "Advanced") {
            fields.forEach(f => f.classList.remove("d-none"));
        } else {
            fields.forEach(f => f.classList.add("d-none"));
            const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
            matching.forEach(f => f.classList.remove("d-none"));
        }
    }

    modeSelect.addEventListener("change", updateVisibility);
    updateVisibility();
})();
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.roleID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.userID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.member_id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.roleID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.userID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.member_id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserRoleID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UserRoleID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UserRoleID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
