@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row g-4">

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Total Users</h5>
                <h2>@ViewBag.TotalUsers</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Total Events</h5>
                <h2>@ViewBag.TotalEvents</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Total Bookings</h5>
                <h2>@ViewBag.TotalBookings</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5>Total Payments</h5>
                <h2>@ViewBag.TotalPayments</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-warning">
            <div class="card-body">
                <h5>Pending Approvals</h5>
                <h2>@ViewBag.PendingApprovals</h2>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm border-danger">
            <div class="card-body">
                <h5>Public Event Requests</h5>
                <h2>@ViewBag.PendingPublicRequests</h2>
            </div>
        </div>
    </div>

</div>
