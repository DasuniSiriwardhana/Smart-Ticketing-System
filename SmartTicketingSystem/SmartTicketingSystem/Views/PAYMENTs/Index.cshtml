@model IEnumerable<SmartTicketingSystem.Models.PAYMENT>

@{
    ViewData["Title"] = "PAYMENTS";
}

<h1>PAYMENTS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="PaymentID">Payment ID</option>
                <option value="BookingID">Booking ID</option>
                <option value="PaymentMethod">Payment Method</option>
                <option value="TransactionReference">Transaction Reference</option>
                <option value="AmountRange">Amount Range</option>
                <option value="DateRange">Paid Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="PaymentID">
            <label class="form-label">Payment ID</label>
            <input type="number" class="form-control" name="paymentId"
                   value="@Context.Request.Query["paymentId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="BookingID">
            <label class="form-label">Booking ID</label>
            <input type="number" class="form-control" name="bookingId"
                   value="@Context.Request.Query["bookingId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="PaymentMethod">
            <label class="form-label">Payment Method</label>
            <input type="text" class="form-control" name="paymentMethod"
                   value="@Context.Request.Query["paymentMethod"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="TransactionReference">
            <label class="form-label">Transaction Ref</label>
            <input type="text" class="form-control" name="transactionReference"
                   value="@Context.Request.Query["transactionReference"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="AmountRange">
            <label class="form-label">Min Amount</label>
            <input type="number" step="0.01" class="form-control" name="minAmount"
                   value="@Context.Request.Query["minAmount"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="AmountRange">
            <label class="form-label">Max Amount</label>
            <input type="number" step="0.01" class="form-control" name="maxAmount"
                   value="@Context.Request.Query["maxAmount"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Payment ID</th>
            <th>Booking ID</th>
            <th>Payment Method</th>
            <th>Transaction Ref</th>
            <th>Amount</th>
            <th>Paid At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PaymentID</td>
                <td>@item.BookingID</td>
                <td>@item.PaymentMethod</td>
                <td>@item.TransactionReference</td>
                <td>@item.Amount.ToString("0.00")</td>
                <td>@item.PaidAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PaymentID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PaymentID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                document.querySelectorAll(`.filter-field[data-mode="${mode}"]`)
                    .forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
