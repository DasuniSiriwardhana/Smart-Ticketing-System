</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="TicketID">Ticket ID</option>
                <option value="EventID">Event ID</option>
                <option value="TypeName">Type Name</option>
                <option value="PriceRange">Price Range</option>
                <option value="SeatRange">Seat Limit Range</option>
                <option value="SalesDateRange">Sales Date Range</option>
                <option value="Status">Active Status</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="TicketID">
            <label>Ticket ID</label>
            <input type="number" class="form-control" name="ticketId"
                   value="@Context.Request.Query["ticketId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventID">
            <label>Event ID</label>
            <input type="number" class="form-control" name="eventId"
                   value="@Context.Request.Query["eventId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="TypeName">
            <label>Type Name</label>
            <input type="text" class="form-control" name="typeName"
                   value="@Context.Request.Query["typeName"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="PriceRange">
            <label>Min Price</label>
            <input type="number" step="0.01" class="form-control" name="minPrice"
                   value="@Context.Request.Query["minPrice"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="PriceRange">
            <label>Max Price</label>
            <input type="number" step="0.01" class="form-control" name="maxPrice"
                   value="@Context.Request.Query["maxPrice"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="SeatRange">
            <label>Min Seats</label>
            <input type="number" class="form-control" name="minSeat"
                   value="@Context.Request.Query["minSeat"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="SeatRange">
            <label>Max Seats</label>
            <input type="number" class="form-control" name="maxSeat"
                   value="@Context.Request.Query["maxSeat"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label>Status</label>
            <select class="form-select" name="isActive">
                <option value="">Select</option>
                <option value="Y" selected="@(Context.Request.Query["isActive"] == "Y")">Active</option>
                <option value="N" selected="@(Context.Request.Query["isActive"] == "N")">Inactive</option>
            </select>
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Event ID</th>
            <th>Type Name</th>
            <th>Price</th>
            <th>Seat Limit</th>
            <th>Sales Start</th>
            <th>Sales End</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.TicketID</td>
            <td>@item.EventID</td>
            <td>@item.TypeName</td>
            <td>@item.Price.ToString("0.00")</td>
            <td>@item.seatLimit</td>
            <td>@item.salesStartAt</td>
            <td>@item.salesEndAt</td>
            <td>@(item.isActive == 'Y' ? "Active" : "Inactive")</td>
            <td>@item.createdAt</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TicketID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TicketID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TicketID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
(function () {
    const modeSelect = document.getElementById("modeSelect");
    const fields = Array.from(document.querySelectorAll(".filter-field"));

    function updateVisibility() {
        const mode = modeSelect.value;

        if (mode === "Advanced") {
            fields.forEach(f => f.classList.remove("d-none"));
        } else {
            fields.forEach(f => f.classList.add("d-none"));
            const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
            matching.forEach(f => f.classList.remove("d-none"));
        }
    }

    modeSelect.addEventListener("change", updateVisibility);
    updateVisibility();
})();
</script>

