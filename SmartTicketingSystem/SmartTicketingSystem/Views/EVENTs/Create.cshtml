@model SmartTicketingSystem.Models.EVENT
@{
    ViewData["Title"] = "Create Event";
}

<div class="container py-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h3 class="mb-1">Create Event</h3>
            <div class="text-muted mb-4">Fill the details and submit for admin approval.</div>

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">

                    <div class="col-md-12">
                        <label asp-for="title" class="form-label"></label>
                        <input asp-for="title" class="form-control" />
                        <span asp-validation-for="title" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StartDateTime" class="form-label"></label>
                        <input asp-for="StartDateTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="StartDateTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="endDateTime" class="form-label"></label>
                        <input asp-for="endDateTime" class="form-control" type="datetime-local" />
                        <span asp-validation-for="endDateTime" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="venue" class="form-label"></label>
                        <input asp-for="venue" class="form-control" />
                        <span asp-validation-for="venue" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <div class="form-check">
                            <input asp-for="IsOnlineBool" class="form-check-input" type="checkbox" id="isOnlineChk" />
                            <label class="form-check-label" for="isOnlineChk">Online Event</label>
                        </div>
                    </div>

                    <div class="col-md-12" id="onlineLinkGroup">
                        <label asp-for="onlineLink" class="form-label"></label>
                        <input asp-for="onlineLink" class="form-control" />
                        <span asp-validation-for="onlineLink" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="capacity" class="form-label"></label>
                        <input asp-for="capacity" class="form-control" />
                        <span asp-validation-for="capacity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Visibility</label>
                        <select asp-for="visibility" class="form-select">
                            <option value="University">University</option>
                            <option value="Public">Public</option>
                        </select>
                        <span asp-validation-for="visibility" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Category</label>
                        <select asp-for="categoryID" class="form-select" asp-items="ViewBag.categoryID">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="categoryID" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Organizer Unit</label>
                        <select asp-for="organizerUnitID" class="form-select" asp-items="ViewBag.organizerUnitID">
                            <option value="">-- Select Unit --</option>
                        </select>
                        <span asp-validation-for="organizerUnitID" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="organizerInfo" class="form-label"></label>
                        <input asp-for="organizerInfo" class="form-control" />
                        <span asp-validation-for="organizerInfo" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Agenda" class="form-label"></label>
                        <textarea asp-for="Agenda" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Agenda" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="maplink" class="form-label"></label>
                        <input asp-for="maplink" class="form-control" />
                        <span asp-validation-for="maplink" class="text-danger"></span>
                    </div>

                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        Submit for Approval
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            const chk = document.getElementById("isOnlineChk");
            const group = document.getElementById("onlineLinkGroup");
            const linkInput = document.querySelector('[name="onlineLink"]');

            function refresh() {
                if (chk.checked) {
                    group.style.display = "";
                } else {
                    group.style.display = "none";
                    if (linkInput) linkInput.value = "";
                }
            }
            chk.addEventListener("change", refresh);
            refresh();
        })();
    </script>
}
