@model SmartTicketingSystem.Models.BOOKING
@{
    ViewData["Title"] = "Booking Confirmed";
}

<div class="container py-4">
    <!-- Success Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card bg-gradient-success text-white border-0">
                <div class="card-body p-5 text-center">
                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x fade-in"></i>
                    </div>
                    <h1 class="display-4 fw-bold mb-3">Booking Confirmed!</h1>
                    <p class="lead mb-0">Thank you for your booking. Your tickets have been reserved.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Booking Details -->
        <div class="col-lg-8">
            <div class="card booking-card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-receipt me-2 text-primary"></i>Booking Details</h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Booking Reference</small>
                                <h4 class="fw-bold text-primary">@Model.BookingReference</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Booking Date</small>
                                <h5>@Model.BookingDateTime.ToString("MMMM dd, yyyy - h:mm tt")</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Event</small>
                                <h5>@(Model.Event?.title ?? "N/A")</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Date & Time</small>
                                <h5>@(Model.Event?.StartDateTime.ToString("MMMM dd, yyyy - h:mm tt") ?? "N/A")</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Venue</small>
                                <h5>@(Model.Event?.venue ?? "N/A")</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <small class="text-muted d-block">Total Amount</small>
                                <h3 class="text-success fw-bold">Rs. @Model.TotalAmount.ToString("N2")</h3>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <!-- Ticket Summary -->
                    <h6 class="mb-3"><i class="fas fa-ticket-alt me-2 text-primary"></i>Ticket Summary</h6>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>Ticket Type</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.BookingItems != null && Model.BookingItems.Any())
                                {
                                    @foreach (var item in Model.BookingItems)
                                    {
                                        <tr>
                                            <td>@(item.TicketType?.TypeName ?? "Unknown")</td>
                                            <td>@item.Quantity</td>
                                            <td>Rs. @item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end fw-bold">Rs. @item.LineTotal.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No ticket details available</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Total:</th>
                                    <th class="text-end text-primary">Rs. @Model.TotalAmount.ToString("N2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Status Badges -->
                    <div class="d-flex gap-3 mt-3">
                        <div class="badge-status">
                            <span class="badge bg-@(Model.BookingStatus == "Confirmed" ? "success" : "warning") p-3">
                                <i class="fas fa-@(Model.BookingStatus == "Confirmed" ? "check" : "clock") me-2"></i>
                                Booking Status: @Model.BookingStatus
                            </span>
                        </div>
                        <div class="badge-status">
                            <span class="badge bg-@(Model.PaymentStatus == "Paid" ? "success" : "danger") p-3">
                                <i class="fas fa-@(Model.PaymentStatus == "Paid" ? "check-circle" : "exclamation-circle") me-2"></i>
                                Payment Status: @Model.PaymentStatus
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payment & Actions Sidebar -->
        <div class="col-lg-4">
            @if (Model.PaymentStatus != "Paid")
            {
                <div class="card payment-card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Payment Required</h5>
                    </div>
                    <div class="card-body">
                        <p>Please complete your payment to receive your QR tickets.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="PAYMENTs" asp-action="Create"
                               asp-route-bookingId="@Model.BookingID"
                               class="btn btn-success btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Pay Now
                            </a>
                            <small class="text-muted text-center">
                                <i class="fas fa-info-circle me-1"></i>
                                You have 24 hours to complete payment
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card success-card mb-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-check-circle me-2"></i>Payment Received</h5>
                    </div>
                    <div class="card-body text-center">
                        <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                        <p>Your tickets are ready! Click below to view and download them.</p>
                        <a asp-action="Tickets" asp-route-id="@Model.BookingID"
                           class="btn btn-primary btn-lg w-100">
                            <i class="fas fa-qrcode me-2"></i>View Tickets
                        </a>
                    </div>
                </div>
            }

            <!-- Action Buttons -->
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-ellipsis-h me-2 text-primary"></i>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="EVENTs" asp-action="Details" asp-route-id="@Model.EventID"
                           class="btn btn-outline-primary">
                            <i class="fas fa-calendar-alt me-2"></i>Back to Event
                        </a>
                        <a asp-action="MyBookings" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>All My Bookings
                        </a>
                        @if (Model.PaymentStatus == "Paid")
                        {
                            <a asp-action="Tickets" asp-route-id="@Model.BookingID"
                               class="btn btn-outline-info">
                                <i class="fas fa-qrcode me-2"></i>View Tickets
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Important Information -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-body">
                    <h6><i class="fas fa-info-circle me-2 text-primary"></i>Important Information</h6>
                    <ul class="mb-0 small">
                        <li>Please arrive at least 30 minutes before the event start time.</li>
                        <li>Digital tickets will be scanned for entry. Please have them ready on your phone.</li>
                        <li>Cancellations are subject to our cancellation policy.</li>
                        <li>For any issues, please contact support@smartticket.lk</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

