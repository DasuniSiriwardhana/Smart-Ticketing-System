@using System.Text.Json

@{
    Layout = "_Layout";
    ViewData["Title"] = "Organizer Dashboard";

    var eventMonthLabels = ViewData["EventMonthLabels"] as List<string> ?? new List<string>();
    var eventMonthCounts = ViewData["EventMonthCounts"] as List<int> ?? new List<int>();

    var topTitles = ViewData["TopEventTitles"] as List<string> ?? new List<string>();
    var topCounts = ViewData["TopEventBookingCounts"] as List<int> ?? new List<int>();

    var eventMonthLabelsJson = JsonSerializer.Serialize(eventMonthLabels);
    var eventMonthCountsJson = JsonSerializer.Serialize(eventMonthCounts);

    var topTitlesJson = JsonSerializer.Serialize(topTitles);
    var topCountsJson = JsonSerializer.Serialize(topCounts);

    var myRecentEvents = ViewData["MyRecentEvents"] as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container py-4">

    <!-- Header / Hero -->
    <div class="p-4 rounded-4 bg-light border mb-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">Organizer Dashboard</h2>
                <div class="text-muted">Create events, track bookings, and manage attendance.</div>
            </div>

            <div class="d-flex gap-2 mt-3 mt-md-0">
                <a class="btn btn-primary" asp-controller="EVENTs" asp-action="Create">
                    <i class="fas fa-plus"></i> Create Event
                </a>
                <a class="btn btn-outline-secondary" asp-controller="EVENTs" asp-action="Index">
                    <i class="fas fa-calendar"></i> My Events
                </a>
                <a class="btn btn-outline-secondary" asp-controller="BOOKINGs" asp-action="MyBookings">
                    <i class="fas fa-ticket-alt"></i> My Bookings
                </a>
                <a class="btn btn-outline-secondary" asp-controller="TICKETs" asp-action="MyTickets">
                    <i class="fas fa-qrcode"></i> My Tickets
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">My Events</div>
                            <div class="display-6">@ViewBag.TotalMyEvents</div>
                        </div>
                        <i class="fas fa-calendar fa-3x text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Event Bookings</div>
                            <div class="display-6">@ViewBag.TotalBookingsForMyEvents</div>
                        </div>
                        <i class="fas fa-shopping-cart fa-3x text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Tickets Issued</div>
                            <div class="display-6">@ViewBag.TotalTicketsIssued</div>
                        </div>
                        <i class="fas fa-ticket-alt fa-3x text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Upcoming Events</div>
                            <div class="display-6">@ViewBag.UpcomingEvents</div>
                        </div>
                        <i class="fas fa-calendar-check fa-3x text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row g-4 mb-4">
        <div class="col-lg-7">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-chart-line"></i> Events Created Per Month</h5>
                    <canvas id="eventMonthChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-chart-bar"></i> Top Events by Bookings</h5>
                    <canvas id="topEventsChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Events with Management Actions -->
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Events</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Start</th>
                            <th>Status</th>
                            <th class="text-end">Capacity</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (dynamic e in myRecentEvents)
                        {
                            <tr>
                                <td class="fw-bold">@e.title</td>
                                <td>@(((DateTime)e.StartDateTime).ToString("MMM dd, yyyy - h:mm tt"))</td>
                                <td>
                                    @if (e.status == "Published")
                                    {
                                        <span class="badge bg-success">Published</span>
                                    }
                                    else if (e.status == "PendingApproval")
                                    {
                                        <span class="badge bg-warning">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@e.status</span>
                                    }
                                </td>
                                <td class="text-end">@e.capacity</td>
                                <td>
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-action="Tickets" asp-route-eventId="@e.eventID"
                                           class="btn btn-sm btn-primary" title="Manage Tickets">
                                            <i class="fas fa-ticket-alt"></i>
                                        </a>
                                        <a asp-action="Promotions" asp-route-eventId="@e.eventID"
                                           class="btn btn-sm btn-success" title="Manage Promotions">
                                            <i class="fas fa-tags"></i>
                                        </a>
                                        <a asp-action="Bookings" asp-route-eventId="@e.eventID"
                                           class="btn btn-sm btn-info" title="View Bookings">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                        <a asp-action="WaitingList" asp-route-eventId="@e.eventID"
                                           class="btn btn-sm btn-warning" title="Waiting List">
                                            <i class="fas fa-clock"></i>
                                        </a>
                                        <a asp-action="Reports" asp-route-eventId="@e.eventID"
                                           class="btn btn-sm btn-secondary" title="Reports">
                                            <i class="fas fa-chart-bar"></i>
                                        </a>
                                        <a asp-controller="EVENTs" asp-action="Details" asp-route-id="@e.eventID"
                                           class="btn btn-sm btn-outline-dark" title="View Event">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Help Text -->
<div class="container mt-3">
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        <strong>Quick Guide:</strong>
        <ul class="mb-0 mt-2">
            <li><i class="fas fa-ticket-alt text-primary"></i> Tickets - Add/edit ticket types and prices</li>
            <li><i class="fas fa-tags text-success"></i> Promos - Create and manage promo codes</li>
            <li><i class="fas fa-shopping-cart text-info"></i> Bookings - View all bookings for this event</li>
            <li><i class="fas fa-clock text-warning"></i> Waiting List - See who's waiting for tickets</li>
            <li><i class="fas fa-chart-bar text-secondary"></i> Reports - View sales and performance reports</li>
        </ul>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    new Chart(document.getElementById('eventMonthChart'), {
        type: 'line',
        data: {
            labels: @Html.Raw(eventMonthLabelsJson),
            datasets: [{
                label: 'Events Created',
                data: @Html.Raw(eventMonthCountsJson),
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });

    new Chart(document.getElementById('topEventsChart'), {
        type: 'bar',
        data: {
            labels: @Html.Raw(topTitlesJson),
            datasets: [{
                label: 'Number of Bookings',
                data: @Html.Raw(topCountsJson),
                backgroundColor: 'rgba(13, 110, 253, 0.7)',
                borderColor: '#0d6efd',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
</script>