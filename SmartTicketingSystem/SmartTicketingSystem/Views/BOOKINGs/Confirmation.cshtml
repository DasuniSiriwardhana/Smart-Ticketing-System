@model SmartTicketingSystem.Models.BOOKING
@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center py-3">
                    <h3 class="mb-0">
                        <i class="fas fa-check-circle"></i> Booking Confirmed!
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <h4>Thank you for your booking!</h4>
                        <p class="text-muted">Your booking has been created successfully.</p>
                    </div>

                    <div class="alert alert-info">
                        <div class="row">
                            <div class="col-sm-6">
                                <strong>Booking Reference:</strong><br />
                                <span class="h5">@Model.BookingReference</span>
                            </div>
                            <div class="col-sm-6">
                                <strong>Total Amount:</strong><br />
                                <span class="h5 text-primary">Rs. @Model.TotalAmount.ToString("N2")</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <strong>Event:</strong><br />
                            @(Model.Event?.title ?? "N/A")
                        </div>
                        <div class="col-md-6">
                            <strong>Booking Date:</strong><br />
                            @Model.BookingDateTime.ToString("MMMM dd, yyyy HH:mm")
                        </div>
                    </div>

                    <div class="mb-4">
                        <strong>Booking Status:</strong><br />
                        @if (Model.BookingStatus == "Confirmed")
                        {
                            <span class="badge bg-success">Confirmed</span>
                        }
                        else if (Model.BookingStatus == "PendingPayment")
                        {
                            <span class="badge bg-warning">Pending Payment</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.BookingStatus</span>
                        }

                        <strong class="ms-3">Payment Status:</strong>
                        @if (Model.PaymentStatus == "Paid")
                        {
                            <span class="badge bg-success">Paid</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Unpaid</span>
                        }
                    </div>

                    @if (Model.PaymentStatus != "Paid")
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Payment Required:</strong> Please complete your payment within 24 hours to receive your QR tickets.
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <a asp-controller="PAYMENTs" asp-action="Create"
                                   asp-route-bookingId="@Model.BookingID"
                                   class="btn btn-success btn-lg w-100">
                                    <i class="fas fa-credit-card"></i> Pay Now (Rs. @Model.TotalAmount.ToString("N2"))
                                </a>
                                <small class="text-muted d-block text-center mt-2">
                                    Pay now and get your tickets immediately
                                </small>
                            </div>
                            <div class="col-md-6">
                                <a asp-controller="BOOKINGs" asp-action="Details"
                                   asp-route-id="@Model.BookingID"
                                   class="btn btn-outline-primary btn-lg w-100">
                                    <i class="fas fa-clock"></i> Pay Later
                                </a>
                                <small class="text-muted d-block text-center mt-2">
                                    You can pay within 24 hours
                                </small>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i>
                            <strong>Payment Received!</strong> Your tickets are ready.
                        </div>

                        <div class="text-center">
                            <a asp-controller="BOOKINGs" asp-action="Tickets"
                               asp-route-id="@Model.BookingID"
                               class="btn btn-primary btn-lg">
                                <i class="fas fa-qrcode"></i> View Tickets
                            </a>
                        </div>
                    }

                    <hr class="my-4" />

                    <div class="d-flex justify-content-between">
                        <a asp-controller="EVENTs" asp-action="Details"
                           asp-route-id="@Model.EventID"
                           class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Event
                        </a>
                        <a asp-controller="BOOKINGs" asp-action="MyBookings"
                           class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> My Bookings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>