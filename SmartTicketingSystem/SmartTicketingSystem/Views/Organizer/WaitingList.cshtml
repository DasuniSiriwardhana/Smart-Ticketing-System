@model IEnumerable<SmartTicketingSystem.Models.WAITING_LIST>
@{
    ViewData["Title"] = "Waiting List";
    var ev = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-clock"></i> Waiting List for @ev?.title</h2>
        </div>
        <div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No one is on the waiting list for this event.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Joined On</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int count = 1;
                            }
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td class="fw-bold">@item.User?.FullName</td>
                                    <td>@item.User?.Email</td>
                                    <td>@item.User?.phone</td>
                                    <td>@item.AddedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (item.Status == "Pending")
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else if (item.Status == "Notified")
                                        {
                                            <span class="badge bg-info">Notified</span>
                                        }
                                        else if (item.Status == "Converted")
                                        {
                                            <span class="badge bg-success">Converted</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-success" onclick="notifyUser(@item.WaitingListID)">
                                            <i class="fas fa-bell"></i> Notify
                                        </button>
                                    </td>
                                </tr>
                                count++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function notifyUser(id) {
            if (confirm('Mark this user as notified?')) {
                // Add AJAX call here to update status
                alert('Notification sent (feature coming soon)');
            }
        }
    </script>
}