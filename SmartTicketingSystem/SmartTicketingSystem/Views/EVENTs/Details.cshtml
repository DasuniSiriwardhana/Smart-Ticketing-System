@model SmartTicketingSystem.Models.ViewModels.EventDetailsVM

@{
    ViewData["Title"] = "Event Details";
}

<div class="container py-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-4">
        <!-- LEFT: Event info -->
        <div class="col-lg-7">
            <div class="card shadow-sm rounded-4">
                <div class="card-body p-4">
                    <div class="d-flex flex-wrap gap-2 mb-3">
                        <span class="badge bg-info text-dark">@Model.Event.visibility</span>
                        <span class="badge bg-secondary">@Model.Event.status</span>
                        <span class="badge bg-dark">
                            Remaining: @Model.RemainingEventCapacity / @Model.Event.capacity
                        </span>
                    </div>

                    <h2 class="mb-2">@Model.Event.title</h2>
                    <div class="text-muted mb-3">
                        @Model.Event.venue •
                        @Model.Event.StartDateTime.ToString("yyyy-MM-dd HH:mm")
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Event.Description))
                    {
                        <p class="mb-4">@Model.Event.Description</p>
                    }

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="p-3 bg-light border rounded-4">
                                <div class="fw-semibold mb-1">Start</div>
                                <div>@Model.Event.StartDateTime</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light border rounded-4">
                                <div class="fw-semibold mb-1">End</div>
                                <div>@Model.Event.endDateTime</div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 flex-wrap">
                        <a class="btn btn-outline-secondary" asp-action="Index">Back</a>

                        @* Admin/Organizer controls *@
                        @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                        {
                            <a class="btn btn-outline-dark"
                               asp-action="Edit"
                               asp-route-id="@Model.Event.eventID">
                                Edit
                            </a>
                            <a class="btn btn-outline-primary"
                               asp-controller="Organizer"
                               asp-action="Tickets"
                               asp-route-eventId="@Model.Event.eventID">
                                <i class="fas fa-ticket-alt"></i> Manage Tickets
                            </a>
                            <a class="btn btn-outline-success"
                               asp-controller="Organizer"
                               asp-action="Promotions"
                               asp-route-eventId="@Model.Event.eventID">
                                <i class="fas fa-tags"></i> Manage Promos
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- RIGHT: Booking & Promotions -->
        <div class="col-lg-5">
            <!-- Book Tickets Card -->
            <div class="card shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h4 class="mb-2">Book Tickets</h4>
                    <div class="text-muted mb-3">
                        Select quantities. You can pay later to receive QR tickets.
                    </div>

                    @* If user is NOT logged in -> show login message *@
                    @if (!(User?.Identity?.IsAuthenticated ?? false))
                    {
                        <div class="alert alert-info mb-0">
                            Please <a asp-area="Identity" asp-page="/Account/Login">log in</a> to book tickets.
                        </div>
                    }
                    else
                    {
                        @* Only members can book *@
                        @if (!(User.IsInRole("ExternalMember") || User.IsInRole("UniversityMember") || User.IsInRole("Organizer") || User.IsInRole("Admin")))
                        {
                            <div class="alert alert-warning mb-0">
                                Your account does not have permission to book tickets.
                            </div>
                        }
                        else
                        {
                            @* If no ticket types available *@
                            if (Model.TicketTypes == null || Model.TicketTypes.Count == 0)
                            {
                                <div class="alert alert-warning mb-0">
                                    <i class="fas fa-exclamation-triangle"></i> No ticket types available for this event.
                                    @if (User.IsInRole("Admin") || User.IsInRole("Organizer"))
                                    {
                                        <div class="mt-2">
                                            <a asp-controller="Organizer"
                                               asp-action="Tickets"
                                               asp-route-eventId="@Model.Event.eventID"
                                               class="btn btn-sm btn-primary">
                                                <i class="fas fa-plus"></i> Add Ticket Types
                                            </a>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                @* If event full -> show waiting list button only *@
                                if (Model.RemainingEventCapacity <= 0)
                                {
                                    <div class="alert alert-warning">
                                        <i class="fas fa-clock"></i> This event is currently full.
                                    </div>
                                    <form asp-action="JoinWaitingList" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="eventId" value="@Model.Event.eventID" />
                                        <button type="submit" class="btn btn-outline-warning w-100">
                                            <i class="fas fa-clock"></i> Join Waiting List
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <!-- Book Now button -->
                                    <a asp-action="Book" asp-route-id="@Model.Event.eventID"
                                       class="btn btn-success btn-lg w-100 mb-3">
                                        <i class="fas fa-ticket-alt"></i> Book Now
                                    </a>

                                    <!-- Preview of available ticket types -->
                                    <div class="mt-3">
                                        <h6>Available Tickets:</h6>
                                        <div class="list-group">
                                            @foreach (var tt in Model.TicketTypes.Take(3))
                                            {
                                                var remaining = Model.RemainingByTicketType.ContainsKey(tt.TicketID)
                                                ? Model.RemainingByTicketType[tt.TicketID]
                                                : 0;

                                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                                    <div>
                                                        <span class="fw-bold">@tt.TypeName</span><br />
                                                        <small class="text-muted">
                                                            @if (tt.Price == 0)
                                                            {
                                                                <span class="badge bg-success">FREE</span>
                                                            }
                                                            else
                                                            {
                                                                <span>Rs. @tt.Price.ToString("N2")</span>
                                                            }
                                                        </small>
                                                    </div>
                                                    <span class="badge bg-info rounded-pill">@remaining left</span>
                                                </div>
                                            }
                                        </div>
                                        @if (Model.TicketTypes.Count > 3)
                                        {
                                            <small class="text-muted d-block mt-2">
                                                + @(Model.TicketTypes.Count - 3) more ticket types available
                                            </small>
                                        }
                                    </div>
                                }
                            }
                        }
                    }
                </div>
            </div>

            <!-- PROMOTIONS CARD - ADD THIS SECTION -->
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-tags"></i> Available Promotions</h5>
                </div>
                <div class="card-body">
                    @{
                        var activePromos = ViewBag.ActivePromos as List<SmartTicketingSystem.Models.PROMO_CODE>;
                    }
                    @if (activePromos != null && activePromos.Any())
                    {
                        <div class="list-group">
                            @foreach (var promo in activePromos)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="fw-bold text-success">@promo.code</span>
                                            @if (promo.DiscountType == "Percentage")
                                            {
                                                <span class="badge bg-primary">@promo.DiscountValue% OFF</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">Rs. @promo.DiscountValue.ToString("N2") OFF</span>
                                            }
                                        </div>
                                        <small class="text-muted">Until @promo.endDate.ToString("MMM dd")</small>
                                    </div>
                                    <small class="text-muted d-block mt-1">
                                        Use code at checkout
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No active promotions for this event.</p>
                    }
                </div>
            </div>

            <div class="text-muted mt-3" style="font-size:0.9rem;">
                <i class="fas fa-info-circle"></i> After payment, the system generates a QR ticket per seat.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-disable quantity inputs when remaining is 0
        $(document).ready(function() {
            $('input[type="number"]').each(function() {
                var max = parseInt($(this).attr('max'));
                if (max <= 0) {
                    $(this).prop('disabled', true);
                }
            });
        });
    </script>
}