@model IEnumerable<SmartTicketingSystem.Models.ORGANIZER_UNIT>

@{
    ViewData["Title"] = "ORGANIZER UNIT";
}

<h1>ORGANIZER UNIT</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="OrganizerID">Organizer ID</option>
                <option value="UnitType">Unit Type</option>
                <option value="ContactEmail">Contact Email</option>
                <option value="ContactPhone">Contact Phone</option>
                <option value="Status">Status</option>
                <option value="DateRange">Created Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="OrganizerID">
            <label class="form-label">Organizer ID</label>
            <input type="number" class="form-control" name="organizerId"
                   value="@Context.Request.Query["organizerId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UnitType">
            <label class="form-label">Unit Type</label>
            <input type="text" class="form-control" name="unitType"
                   value="@Context.Request.Query["unitType"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ContactEmail">
            <label class="form-label">Contact Email</label>
            <input type="text" class="form-control" name="contactEmail"
                   value="@Context.Request.Query["contactEmail"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ContactPhone">
            <label class="form-label">Contact Phone</label>
            <input type="text" class="form-control" name="contactPhone"
                   value="@Context.Request.Query["contactPhone"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Select Status</option>
                <option value="A" selected="@(Context.Request.Query["status"] == "A")">Active</option>
                <option value="I" selected="@(Context.Request.Query["status"] == "I")">Inactive</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Organizer ID</th>
            <th>Unit Time</th>
            <th>Unit Type</th>
            <th>Contact Email</th>
            <th>Contact Phone</th>
            <th>Status</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrganizerID</td>
                <td>@item.unitTime</td>
                <td>@item.UnitType</td>
                <td>@item.ContactEmail</td>
                <td>@item.ContactPhone</td>
                <td>@(item.status == 'A' ? "Active" : "Inactive")</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.OrganizerID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.OrganizerID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.OrganizerID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
                matching.forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
