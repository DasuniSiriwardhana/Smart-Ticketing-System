@model IEnumerable<SmartTicketingSystem.Models.PROMO_CODE>

@{
    ViewData["Title"] = "PROMO CODES";
}

<h1>PROMO CODES</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="PromoCodeID">Promo Code ID</option>
                <option value="Code">Code</option>
                <option value="DiscountType">Discount Type</option>
                <option value="DiscountRange">Discount Value Range</option>
                <option value="Status">Active Status</option>
                <option value="ValidityRange">Validity Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="PromoCodeID">
            <label class="form-label">Promo Code ID</label>
            <input type="number" class="form-control" name="promoCodeId"
                   value="@Context.Request.Query["promoCodeId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Code">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" name="code"
                   value="@Context.Request.Query["code"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DiscountType">
            <label class="form-label">Discount Type</label>
            <input type="text" class="form-control" name="discountType"
                   value="@Context.Request.Query["discountType"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DiscountRange">
            <label class="form-label">Min Discount</label>
            <input type="number" step="0.01" class="form-control" name="minDiscount"
                   value="@Context.Request.Query["minDiscount"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DiscountRange">
            <label class="form-label">Max Discount</label>
            <input type="number" step="0.01" class="form-control" name="maxDiscount"
                   value="@Context.Request.Query["maxDiscount"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Active Status</label>
            <select class="form-select" name="isActive">
                <option value="">Select</option>
                <option value="Y" selected="@(Context.Request.Query["isActive"] == "Y")">Active</option>
                <option value="N" selected="@(Context.Request.Query["isActive"] == "N")">Inactive</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="ValidityRange">
            <label class="form-label">Start From</label>
            <input type="date" class="form-control" name="fromStartDate"
                   value="@Context.Request.Query["fromStartDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ValidityRange">
            <label class="form-label">End To</label>
            <input type="date" class="form-control" name="toEndDate"
                   value="@Context.Request.Query["toEndDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Code</th>
            <th>Type</th>
            <th>Value</th>
            <th>Start</th>
            <th>End</th>
            <th>Status</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PromoCodeID</td>
                <td>@item.code</td>
                <td>@item.DiscountType</td>
                <td>@item.DiscountValue</td>
                <td>@item.startDate</td>
                <td>@item.endDate</td>
                <td>@(item.isActive == 'Y' ? "Active" : "Inactive")</td>
                <td>@item.createdAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PromoCodeID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PromoCodeID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PromoCodeID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                document.querySelectorAll(`.filter-field[data-mode="${mode}"]`)
                    .forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
