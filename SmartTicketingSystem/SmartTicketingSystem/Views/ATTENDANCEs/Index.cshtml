@model IEnumerable<SmartTicketingSystem.Models.ATTENDANCE>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="mb-3" id="searchForm">
    <div class="row g-2 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="AttendanceID">Attendance ID</option>
                <option value="EventID">Event ID</option>
                <option value="UserID">User ID</option>
                <option value="TicketID">Ticket ID</option>
                <option value="Status">Status</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="AttendanceID">
            <label class="form-label">Attendance ID</label>
            <input type="number" class="form-control" name="attendanceId"
                   value="@Context.Request.Query["attendanceId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventID">
            <label class="form-label">Event ID</label>
            <input type="number" class="form-control" name="eventId"
                   value="@Context.Request.Query["eventId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="UserID">
            <label class="form-label">User ID</label>
            <input type="number" class="form-control" name="userId"
                   value="@Context.Request.Query["userId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="TicketID">
            <label class="form-label">Ticket ID</label>
            <input type="number" class="form-control" name="ticketId"
                   value="@Context.Request.Query["ticketId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <input type="text" class="form-control" name="status"
                   value="@Context.Request.Query["status"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                // Show ALL fields
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                // Hide ALL fields
                fields.forEach(f => f.classList.add("d-none"));

                // Show only the selected field
                const target = document.querySelector(`.filter-field[data-mode="${mode}"]`);
                if (target) target.classList.remove("d-none");
            }
        }

        // Keep selection after search (if mode exists in query string)
        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckedInAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CheckInStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedInAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInStatus)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttendanceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AttendanceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AttendanceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
