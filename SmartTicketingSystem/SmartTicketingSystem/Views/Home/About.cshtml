@{
    ViewData["Title"] = "About Us";
}

<div class="container py-5">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h1 class="display-4 fw-bold mb-3">About Smart Ticket</h1>
            <p class="lead text-muted">Your trusted platform for discovering and booking amazing events at ESU</p>
        </div>
    </div>

    <!-- Mission Section -->
    <div class="row mb-5 align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">Our Mission</h2>
            <p class="fs-5">To make event discovery and ticket booking seamless, secure, and accessible for everyone. We connect people with unforgettable experiences through technology.</p>
            <p class="fs-5">Whether it's concerts, workshops, sports events, or cultural gatherings, Smart Ticket brings the best events to your fingertips.</p>
        </div>
        <div class="col-md-6">
            <div class="card bg-primary text-white p-5 text-center">
                <i class="fas fa-ticket-alt fa-5x mb-3"></i>
                <h3>Smart Ticket</h3>
                <p>Join with Us Today</p>
            </div>
        </div>
    </div>

    <!-- Vision Section -->
    <div class="row mb-5 flex-row-reverse align-items-center">
        <div class="col-md-6">
            <h2 class="fw-bold mb-3">Our Vision</h2>
            <p class="fs-5">To become the leading event ticketing platform in Sri Lanka, revolutionizing how people discover, book, and experience events.</p>
            <p class="fs-5">We envision a future where booking tickets is as easy as ordering food, and where every event is just a click away.</p>
        </div>
        <div class="col-md-6">
            <div class="card bg-success text-white p-5 text-center">
                <i class="fas fa-eye fa-5x mb-3"></i>
                <h3>Easy Handling</h3>
                <p>Innovating Event Experiences</p>
            </div>
        </div>
    </div>

    <!-- Why Choose Us -->
    <div class="row mb-5">
        <div class="col-12 text-center mb-4">
            <h2 class="fw-bold">Why Choose Smart Ticket?</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center p-4">
                <div class="rounded-circle bg-primary-soft d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-shield-alt fa-3x text-primary"></i>
                </div>
                <h4>Secure Booking</h4>
                <p class="text-muted">Your payments and personal information are always protected with industry-standard encryption.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center p-4">
                <div class="rounded-circle bg-success-soft d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-qrcode fa-3x text-success"></i>
                </div>
                <h4>QR Tickets</h4>
                <p class="text-muted">Easy digital tickets with QR codes for hassle-free entry at any venue.</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 text-center p-4">
                <div class="rounded-circle bg-info-soft d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 80px; height: 80px;">
                    <i class="fas fa-headset fa-3x text-info"></i>
                </div>
                <h4>24/7 Support</h4>
                <p class="text-muted">We are always ready to help with any questions or issues.</p>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card bg-gradient-primary text-white">
                <div class="card-body p-5">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3 mb-md-0">
                            <h3 class="fw-bold display-5">100+</h3>
                            <p>Events</p>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <h3 class="fw-bold display-5">5k+</h3>
                            <p>Happy Users</p>
                        </div>
                        <div class="col-md-3 mb-3 mb-md-0">
                            <h3 class="fw-bold display-5">20+</h3>
                            <p>Organizers</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="fw-bold display-5">24/7</h3>
                            <p>Support</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
