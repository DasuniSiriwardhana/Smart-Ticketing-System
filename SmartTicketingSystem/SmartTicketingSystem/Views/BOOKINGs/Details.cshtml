@model SmartTicketingSystem.Models.BOOKING
@{
    ViewData["Title"] = "Booking Details";
}

<div class="container py-4">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Booking @Model.BookingReference</h4>
            <span class="badge bg-light text-dark">@Model.BookingStatus</span>
        </div>
        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <div class="row">
                <div class="col-md-6">
                    <h5>Event Details</h5>
                    <p>
                        <strong>@Model.Event?.title</strong><br />
                        <i class="fas fa-calendar"></i> @Model.Event?.StartDateTime.ToString("MMMM dd, yyyy - h:mm tt")<br />
                        <i class="fas fa-map-marker-alt"></i> @Model.Event?.venue
                    </p>
                </div>
                <div class="col-md-6">
                    <h5>Payment Summary</h5>
                    <p>
                        <strong>Total Amount:</strong> Rs. @Model.TotalAmount.ToString("N2")<br />
                        <strong>Payment Status:</strong>
                        <span class="badge bg-@(Model.PaymentStatus == "Paid" ? "success" : "danger")">
                            @Model.PaymentStatus
                        </span><br />
                        <strong>Booking Date:</strong> @Model.BookingDateTime.ToString("MMM dd, yyyy HH:mm")
                    </p>
                </div>
            </div>

            <hr />

            <h5>Tickets</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Ticket Type</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.BookingItems)
                    {
                        <tr>
                            <td>@item.TicketType?.TypeName</td>
                            <td>@item.Quantity</td>
                            <td>Rs. @item.UnitPrice.ToString("N2")</td>
                            <td>Rs. @item.LineTotal.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="3" class="text-end">Total:</th>
                        <th>Rs. @Model.TotalAmount.ToString("N2")</th>
                    </tr>
                </tfoot>
            </table>

            @if (Model.PaymentStatus != "Paid" && Model.BookingStatus != "Cancelled")
            {
                <div class="alert alert-warning mt-3">
                    <h5>Payment Required</h5>
                    <p>This booking requires payment to generate tickets.</p>
                    <div class="d-flex gap-2">
                        <a asp-controller="PAYMENTs" asp-action="Create"
                           asp-route-bookingId="@Model.BookingID"
                           class="btn btn-success">
                            <i class="fas fa-credit-card"></i> Pay Now
                        </a>
                        <button type="button" class="btn btn-danger"
                                onclick="showCancelModal(@Model.BookingID, '@Model.BookingReference')">
                            <i class="fas fa-times"></i> Cancel Booking
                        </button>
                    </div>
                </div>
            }

            @if (Model.PaymentStatus == "Paid" && Model.BookingStatus != "Cancelled")
            {
                <div class="alert alert-success mt-3">
                    <h5>Payment Received</h5>
                    <p>Your tickets are ready!</p>
                    <a asp-action="Tickets" asp-route-id="@Model.BookingID"
                       class="btn btn-primary">
                        <i class="fas fa-qrcode"></i> View Tickets
                    </a>
                </div>
            }

            @if (Model.BookingStatus == "Cancelled")
            {
                <div class="alert alert-secondary mt-3">
                    <h5>Booking Cancelled</h5>
                    <p>This booking was cancelled on @Model.CancelledAt?.ToString("MMM dd, yyyy HH:mm")</p>
                    @if (!string.IsNullOrEmpty(Model.CancellationReason))
                    {
                        <p><strong>Reason:</strong> @Model.CancellationReason</p>
                    }
                </div>
            }

            <hr />

            <div class="d-flex justify-content-between">
                <a asp-action="MyBookings" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back to My Bookings
                </a>
                @if (Model.PaymentStatus == "Paid" && Model.BookingStatus != "Cancelled")
                {
                    <a asp-action="Tickets" asp-route-id="@Model.BookingID"
                       class="btn btn-outline-info">
                        <i class="fas fa-qrcode"></i> View Tickets
                    </a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Cancel Modal (same as in MyBookings) -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Cancel Booking</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="Cancel" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="cancelBookingId" />
                <div class="modal-body">
                    <p>Are you sure you want to cancel booking <strong id="cancelBookingRef"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">Reason (optional)</label>
                        <textarea name="cancellationReason" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-danger">Confirm Cancellation</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showCancelModal(bookingId, bookingRef) {
            $('#cancelBookingId').val(bookingId);
            $('#cancelBookingRef').text(bookingRef);
            $('#cancelModal').modal('show');
        }
    </script>
}