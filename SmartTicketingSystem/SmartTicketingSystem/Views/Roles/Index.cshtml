@model IEnumerable<SmartTicketingSystem.Models.Role>

@{
    ViewData["Title"] = "ROLES";
}

<h1>ROLES</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="RoleID">Role ID</option>
                <option value="RoleName">Role Name</option>
                <option value="DateRange">Created Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="RoleID">
            <label class="form-label">Role ID</label>
            <input type="number" class="form-control" name="roleId"
                   value="@Context.Request.Query["roleId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="RoleName">
            <label class="form-label">Role Name</label>
            <input type="text" class="form-control" name="rolename"
                   value="@Context.Request.Query["rolename"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Role ID</th>
            <th>Role Name</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
        <tr>
            <td>@item.RoleId</td>
            <td>@item.rolename</td>
            <td>@item.createdAt</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
(function () {
    const modeSelect = document.getElementById("modeSelect");
    const fields = Array.from(document.querySelectorAll(".filter-field"));

    function updateVisibility() {
        const mode = modeSelect.value;

        if (mode === "Advanced") {
            fields.forEach(f => f.classList.remove("d-none"));
        } else {
            fields.forEach(f => f.classList.add("d-none"));
            const matching = document.querySelectorAll(`.filter-field[data-mode="${mode}"]`);
            matching.forEach(f => f.classList.remove("d-none"));
        }
    }

    const params = new URLSearchParams(window.location.search);
    const savedMode = params.get("mode");
    if (savedMode) modeSelect.value = savedMode;

    modeSelect.addEventListener("change", updateVisibility);
    updateVisibility();
})();
</script>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.rolename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rolename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RoleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RoleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RoleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
