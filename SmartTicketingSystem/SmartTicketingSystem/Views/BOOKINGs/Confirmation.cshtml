@model SmartTicketingSystem.Models.BOOKING

@{
    ViewData["Title"] = "Booking Confirmation";
    var items = ViewData["Items"] as IEnumerable<dynamic> ?? new List<dynamic>();
}

<div class="container py-4">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card shadow-sm rounded-4">
        <div class="card-body p-4">
            <h3 class="mb-1">Booking Created ✅</h3>
            <div class="text-muted mb-3">
                Booking Ref: <strong>@Model.BookingReference</strong> •
                Status: <strong>@Model.BookingStatus</strong> •
                Payment: <strong>@Model.PaymentStatus</strong>
            </div>

            <hr />

            <h5 class="mb-3">Booking Items</h5>

            @if (!items.Any())
            {
                <div class="alert alert-warning mb-0">No items found for this booking.</div>
            }
            else
            {
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Ticket Type</th>
                            <th class="text-end">Qty</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-end">Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var i in items)
                        {
                            <tr>
                                <td>@i.TypeName</td>
                                <td class="text-end">@i.Quantity</td>
                                <td class="text-end">Rs @i.UnitPrice</td>
                                <td class="text-end">Rs @i.LineTotal</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div class="fs-5">
                    Total: <strong>Rs @Model.TotalAmount</strong>
                </div>

                <div class="d-flex gap-2">
                    <!-- Pay Later -->
                    <a class="btn btn-outline-secondary"
                       asp-controller="BOOKINGs"
                       asp-action="Index">
                        Pay Later
                    </a>

                    <!-- Pay Now -->
                    <a class="btn btn-success"
                       asp-controller="PAYMENTs"
                       asp-action="Create"
                       asp-route-bookingId="@Model.BookingID">
                        Pay Now
                    </a>
                </div>
            </div>

            <div class="text-muted mt-3" style="font-size:0.9rem;">
                Pay Now to generate your QR ticket(s). Pay Later keeps the booking as unpaid.
            </div>
        </div>
    </div>
</div>
