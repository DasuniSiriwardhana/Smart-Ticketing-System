            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportDetail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReportedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RportID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RportID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RportID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
