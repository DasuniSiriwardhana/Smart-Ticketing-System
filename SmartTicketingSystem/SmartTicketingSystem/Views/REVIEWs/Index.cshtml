@model IEnumerable<SmartTicketingSystem.Models.REVIEW>

@{
    ViewData["Title"] = "REVIEWS";
}

<h1>REVIEWS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="ReviewID">Review ID</option>
                <option value="EventID">Event ID</option>
                <option value="member_id">Member ID</option>
                <option value="RatingRange">Rating Range</option>
                <option value="Verified">Verified Attendee</option>
                <option value="ReviewStatus">Review Status</option>
                <option value="Comments">Comments Contains</option>
                <option value="DateRange">Created Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="ReviewID">
            <label class="form-label">Review ID</label>
            <input type="number" class="form-control" name="reviewId"
                   value="@Context.Request.Query["reviewId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventID">
            <label class="form-label">Event ID</label>
            <input type="number" class="form-control" name="eventId"
                   value="@Context.Request.Query["eventId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="member_id">
            <label class="form-label">Member ID</label>
            <input type="number" class="form-control" name="member_id"
                   value="@Context.Request.Query["member_id"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="RatingRange">
            <label class="form-label">Min Rating</label>
            <input type="number" min="1" max="5" class="form-control" name="minRating"
                   value="@Context.Request.Query["minRating"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="RatingRange">
            <label class="form-label">Max Rating</label>
            <input type="number" min="1" max="5" class="form-control" name="maxRating"
                   value="@Context.Request.Query["maxRating"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Verified">
            <label class="form-label">Verified Attendee</label>
            <select class="form-select" name="isVerifiedAttendee">
                <option value="">Select</option>
                <option value="Y" selected="@(Context.Request.Query["isVerifiedAttendee"] == "Y")">Yes</option>
                <option value="N" selected="@(Context.Request.Query["isVerifiedAttendee"] == "N")">No</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="ReviewStatus">
            <label class="form-label">Review Status</label>
            <select class="form-select" name="reviewStatus">
                <option value="">Select</option>
                <option value="Pending" selected="@(Context.Request.Query["reviewStatus"] == "Pending")">Pending</option>
                <option value="Approved" selected="@(Context.Request.Query["reviewStatus"] == "Approved")">Approved</option>
                <option value="Rejected" selected="@(Context.Request.Query["reviewStatus"] == "Rejected")">Rejected</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="Comments">
            <label class="form-label">Comments Contains</label>
            <input type="text" class="form-control" name="commentsText"
                   value="@Context.Request.Query["commentsText"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="DateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Review ID</th>
            <th>Event ID</th>
            <th>User ID</th>
            <th>Ratings</th>
            <th>Comments</th>
            <th>Verified</th>
            <th>Status</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ReviewID</td>
                <td>@item.eventID</td>
                <td>@item.member_id</td>
                <td>@item.Ratings</td>
                <td>@item.Comments</td>
                <td>@(item.isVerifiedAttendee == 'Y' ? "Yes" : "No")</td>
                <td>@item.ReviewStatus</td>
                <td>@item.createdAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReviewID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReviewID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReviewID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                document.querySelectorAll(`.filter-field[data-mode="${mode}"]`)
                    .forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
