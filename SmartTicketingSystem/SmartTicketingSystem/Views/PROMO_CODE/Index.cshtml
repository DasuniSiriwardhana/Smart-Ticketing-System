@model IEnumerable<SmartTicketingSystem.Models.PROMO_CODE>
@{
    ViewData["Title"] = "Promo Codes";

    // Fix the tuple declaration - use ValueTuple
    var usageStats = ViewBag.UsageStats as Dictionary<int, (int Count, decimal TotalDiscount)>;
    var isAdmin = User.IsInRole("Admin");
    var currentEvent = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="fas fa-tags"></i> Promo Codes
                @if (currentEvent != null)
                {
                    <span class="fs-5 text-muted">for @currentEvent.title</span>
                }
            </h2>
            @if (currentEvent != null)
            {
                <a asp-controller="EVENTs" asp-action="Details" asp-route-id="@currentEvent.eventID"
                   class="btn btn-outline-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Back to Event
                </a>
            }
        </div>
        <div>
            <a asp-action="Create" asp-route-eventId="@ViewBag.EventId" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create New Promo
            </a>
            <a asp-action="Usage" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> Usage Reports
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No promo codes found.
            @if (currentEvent != null)
            {
                <a asp-action="Create" asp-route-eventId="@currentEvent.eventID">Create your first promo code</a>
            }
            else
            {
                <a asp-action="Create">Create your first promo code</a>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Code</th>
                                <th>Discount</th>
                                <th>Validity Period</th>
                                <th>Usage</th>
                                <th>Total Discount</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var promo in Model)
                            {
                                // Fix: Create a local variable for the tuple
                                var usageData = usageStats != null && usageStats.ContainsKey(promo.PromoCodeID)
                                ? usageStats[promo.PromoCodeID]
                                : default;

                                var usageCount = usageData.Count;
                                var totalDiscount = usageData.TotalDiscount;

                                var statusClass = promo.isActive == 'Y' ? "success" : "danger";
                                var statusText = promo.isActive == 'Y' ? "Active" : "Inactive";
                                var now = DateTime.Now;
                                var isValid = now >= promo.startDate && now <= promo.endDate;
                                var dateStatusClass = isValid ? "text-success" : "text-danger";
                                var dateStatusIcon = isValid ? "fa-check-circle" : "fa-exclamation-circle";

                                <tr>
                                    <td class="fw-bold">@promo.code</td>
                                    <td>
                                        @if (promo.DiscountType == "Percentage")
                                        {
                                            <span>@promo.DiscountValue% OFF</span>
                                        }
                                        else
                                        {
                                            <span>@promo.DiscountValue.ToString("C") OFF</span>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            <small class="text-muted">From:</small> @promo.startDate.ToString("MMM dd, yyyy")<br />
                                            <small class="text-muted">To:</small> @promo.endDate.ToString("MMM dd, yyyy")
                                            <span class="@dateStatusClass ms-1">
                                                <i class="fas @dateStatusIcon"></i>
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@usageCount</span>
                                    </td>
                                    <td>
                                        @if (totalDiscount > 0)
                                        {
                                            <span class="text-success">@totalDiscount.ToString("C")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@statusClass">@statusText</span>
                                    </td>
                                    <td>
                                        <small>@promo.createdAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@promo.PromoCodeID"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@promo.PromoCodeID"
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="ToggleStatus" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@promo.PromoCodeID" />
                                                <button type="submit" class="btn btn-outline-warning"
                                                        title="@(promo.isActive == 'Y' ? "Deactivate" : "Activate")">
                                                    <i class="fas @(promo.isActive == 'Y' ? "fa-eye-slash" : "fa-eye")"></i>
                                                </button>
                                            </form>
                                            @if (isAdmin && usageCount == 0)
                                            {
                                                <a asp-action="Delete" asp-route-id="@promo.PromoCodeID"
                                                   class="btn btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-muted">
            <small>
                <i class="fas fa-info-circle"></i>
                <span class="text-success"><i class="fas fa-check-circle"></i> Currently valid</span> |
                <span class="text-danger"><i class="fas fa-exclamation-circle"></i> Expired/Not yet started</span>
            </small>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}