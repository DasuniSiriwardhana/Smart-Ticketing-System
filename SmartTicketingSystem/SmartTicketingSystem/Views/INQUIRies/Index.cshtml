<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="InquiryID">Inquiry ID</option>
                <option value="HandleByUserID">Handled By User ID</option>
                <option value="FullName">Full Name</option>
                <option value="Email">Email</option>
                <option value="Category">Category</option>
                <option value="Status">Status</option>
                <option value="Message">Message Contains</option>
                <option value="ResponseNote">Response Note Contains</option>
                <option value="CreatedDateRange">Created Date Range</option>
                <option value="Advanced">Advanced (Multiple Filters)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="InquiryID">
            <label class="form-label">Inquiry ID</label>
            <input type="number" class="form-control" name="inquiryId"
                   value="@Context.Request.Query["inquiryId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="HandleByUserID">
            <label class="form-label">Handled By User ID</label>
            <input type="number" class="form-control" name="handleByUserId"
                   value="@Context.Request.Query["handleByUserId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="FullName">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName"
                   value="@Context.Request.Query["fullName"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Email">
            <label class="form-label">Email</label>
            <input type="text" class="form-control" name="email"
                   value="@Context.Request.Query["email"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Category">
            <label class="form-label">Category</label>
            <input type="text" class="form-control" name="category"
                   value="@Context.Request.Query["category"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Select Status</option>
                <option value="Open" selected="@(Context.Request.Query["status"] == "Open")">Open</option>
                <option value="InProgress" selected="@(Context.Request.Query["status"] == "InProgress")">In Progress</option>
                <option value="Closed" selected="@(Context.Request.Query["status"] == "Closed")">Closed</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="Message">
            <label class="form-label">Message</label>
            <input type="text" class="form-control" name="messageText"
                   value="@Context.Request.Query["messageText"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ResponseNote">
            <label class="form-label">Response Note</label>
            <input type="text" class="form-control" name="responseNote"
                   value="@Context.Request.Query["responseNote"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="CreatedDateRange">
            <label class="form-label">From</label>
            <input type="date" class="form-control" name="fromDate"
                   value="@Context.Request.Query["fromDate"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="CreatedDateRange">
            <label class="form-label">To</label>
            <input type="date" class="form-control" name="toDate"
                   value="@Context.Request.Query["toDate"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>

    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
