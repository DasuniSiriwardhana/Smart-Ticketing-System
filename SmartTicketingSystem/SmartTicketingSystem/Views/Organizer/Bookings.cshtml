@model IEnumerable<SmartTicketingSystem.Models.BOOKING>
@{
    ViewData["Title"] = "Bookings";
    var ev = ViewBag.Event as SmartTicketingSystem.Models.EVENT;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-shopping-cart"></i> Bookings for @ev?.title</h2>
        </div>
        <div>
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No bookings found for this event.
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Booking Ref</th>
                                <th>Customer</th>
                                <th>Email</th>
                                <th>Date</th>
                                <th>Tickets</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Payment</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@booking.BookingReference</td>
                                    <td>@booking.User?.FullName</td>
                                    <td>@booking.User?.Email</td>
                                    <td>@booking.BookingDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (booking.BookingItems != null && booking.BookingItems.Any())
                                        {
                                            foreach (var item in booking.BookingItems)
                                            {
                                                <div>@item.Quantity x @item.TicketType?.TypeName</div>
                                            }
                                        }
                                    </td>
                                    <td>Rs. @booking.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @if (booking.BookingStatus == "Confirmed")
                                        {
                                            <span class="badge bg-success">Confirmed</span>
                                        }
                                        else if (booking.BookingStatus == "PendingPayment")
                                        {
                                            <span class="badge bg-warning">Pending</span>
                                        }
                                        else if (booking.BookingStatus == "Cancelled")
                                        {
                                            <span class="badge bg-danger">Cancelled</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@booking.BookingStatus</span>
                                        }
                                    </td>
                                    <td>
                                        @if (booking.PaymentStatus == "Paid")
                                        {
                                            <span class="badge bg-success">Paid</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Unpaid</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="BOOKINGs" asp-action="Details" asp-route-id="@booking.BookingID"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>