@model IEnumerable<SmartTicketingSystem.Models.PUBLIC_EVENT_REQUEST>

@{
    ViewData["Title"] = "PUBLIC EVENT REQUESTS";
}

<h1>PUBLIC EVENT REQUESTS</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form asp-action="Search" method="get" class="mb-4">
    <div class="row g-3 align-items-end">

        <div class="col-md-3">
            <label class="form-label">Search Mode</label>
            <select class="form-select" name="mode" id="modeSelect">
                <option value="RequestID">Request ID</option>
                <option value="ReviewedByUserID">Reviewed By User ID</option>
                <option value="FullName">Requester Name</option>
                <option value="Email">Requester Email</option>
                <option value="EventTitle">Event Title</option>
                <option value="VenueOrMode">Venue / Mode</option>
                <option value="Status">Status</option>
                <option value="CreatedDateRange">Created Date Range</option>
                <option value="ProposedDateRange">Proposed Date Range</option>
                <option value="Advanced">Advanced (Multiple)</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="RequestID">
            <label class="form-label">Request ID</label>
            <input type="number" class="form-control" name="requestId"
                   value="@Context.Request.Query["requestId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ReviewedByUserID">
            <label class="form-label">Reviewed By User ID</label>
            <input type="number" class="form-control" name="reviewedByUserId"
                   value="@Context.Request.Query["reviewedByUserId"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="FullName">
            <label class="form-label">Requester Name</label>
            <input type="text" class="form-control" name="requestFullName"
                   value="@Context.Request.Query["requestFullName"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Email">
            <label class="form-label">Requester Email</label>
            <input type="text" class="form-control" name="requestEmail"
                   value="@Context.Request.Query["requestEmail"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="EventTitle">
            <label class="form-label">Event Title</label>
            <input type="text" class="form-control" name="eventTitle"
                   value="@Context.Request.Query["eventTitle"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="VenueOrMode">
            <label class="form-label">Venue / Mode</label>
            <input type="text" class="form-control" name="venueOrMode"
                   value="@Context.Request.Query["venueOrMode"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="Status">
            <label class="form-label">Status</label>
            <select class="form-select" name="status">
                <option value="">Select Status</option>
                <option value="Open" selected="@(Context.Request.Query["status"] == "Open")">Open</option>
                <option value="InProgress" selected="@(Context.Request.Query["status"] == "InProgress")">In Progress</option>
                <option value="Closed" selected="@(Context.Request.Query["status"] == "Closed")">Closed</option>
            </select>
        </div>

        <div class="col-md-3 filter-field" data-mode="CreatedDateRange">
            <label class="form-label">Created From</label>
            <input type="date" class="form-control" name="createdFrom"
                   value="@Context.Request.Query["createdFrom"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="CreatedDateRange">
            <label class="form-label">Created To</label>
            <input type="date" class="form-control" name="createdTo"
                   value="@Context.Request.Query["createdTo"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ProposedDateRange">
            <label class="form-label">Proposed From</label>
            <input type="date" class="form-control" name="proposedFrom"
                   value="@Context.Request.Query["proposedFrom"]" />
        </div>

        <div class="col-md-3 filter-field" data-mode="ProposedDateRange">
            <label class="form-label">Proposed To</label>
            <input type="date" class="form-control" name="proposedTo"
                   value="@Context.Request.Query["proposedTo"]" />
        </div>

        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
            <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
        </div>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Request ID</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Event Title</th>
            <th>Proposed Date</th>
            <th>Venue/Mode</th>
            <th>Status</th>
            <th>Reviewed By</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.requestID</td>
                <td>@item.requestFullName</td>
                <td>@item.RequestEmail</td>
                <td>@item.phoneNumber</td>
                <td>@item.eventTitle</td>
                <td>@item.proposedDateTime</td>
                <td>@item.VenueorMode</td>
                <td>@item.status</td>
                <td>@item.ReviewedByUserID</td>
                <td>@item.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.requestID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.requestID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.requestID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    (function () {
        const modeSelect = document.getElementById("modeSelect");
        const fields = Array.from(document.querySelectorAll(".filter-field"));

        function updateVisibility() {
            const mode = modeSelect.value;

            if (mode === "Advanced") {
                fields.forEach(f => f.classList.remove("d-none"));
            } else {
                fields.forEach(f => f.classList.add("d-none"));
                document.querySelectorAll(`.filter-field[data-mode="${mode}"]`)
                    .forEach(f => f.classList.remove("d-none"));
            }
        }

        const params = new URLSearchParams(window.location.search);
        const savedMode = params.get("mode");
        if (savedMode) modeSelect.value = savedMode;

        modeSelect.addEventListener("change", updateVisibility);
        updateVisibility();
    })();
</script>
