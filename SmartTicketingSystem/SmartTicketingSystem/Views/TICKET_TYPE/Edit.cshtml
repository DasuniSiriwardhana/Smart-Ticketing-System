@model SmartTicketingSystem.Models.TICKET_TYPE

@{
    ViewData["Title"] = "Edit Ticket Type";
}

<h1>Edit Ticket Type</h1>

<h4>TICKET_TYPE</h4>
<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- PK -->
            <input type="hidden" asp-for="TicketID" />

            <div class="mb-3">
                <label asp-for="EventID" class="form-label"></label>
                <input asp-for="EventID" class="form-control" />
                <span asp-validation-for="EventID" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TypeName" class="form-label"></label>
                <input asp-for="TypeName" class="form-control" />
                <span asp-validation-for="TypeName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="seatLimit" class="form-label"></label>
                <input asp-for="seatLimit" class="form-control" />
                <span asp-validation-for="seatLimit" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="salesStartAt" class="form-label"></label>
                <input asp-for="salesStartAt" class="form-control" type="datetime-local"
                       value="@(Model.salesStartAt.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="salesStartAt" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="salesEndAt" class="form-label"></label>
                <input asp-for="salesEndAt" class="form-control" type="datetime-local"
                       value="@(Model.salesEndAt.ToString("yyyy-MM-ddTHH:mm"))" />
                <span asp-validation-for="salesEndAt" class="text-danger"></span>
            </div>

            <!-- CHAR (Y/N) -> Checkbox -->
            <div class="mb-3 form-check">
                <input asp-for="IsActiveBool" class="form-check-input" />
                <label asp-for="IsActiveBool" class="form-check-label">Active</label>
            </div>
            <span asp-validation-for="IsActiveBool" class="text-danger"></span>

            <!-- createdAt should not be edited -->
            <div class="mb-3">
                <label asp-for="createdAt" class="form-label"></label>
                <input asp-for="createdAt" class="form-control" readonly />
                <small class="text-muted">Created date cannot be changed.</small>
                <span asp-validation-for="createdAt" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
