@using System.Text.Json

@{
    Layout = "_Layout";
    ViewData["Title"] = "University Member Dashboard";

    var bookingLabels = ViewData["BookingMonthLabels"] as List<string> ?? new List<string>();
    var bookingCounts = ViewData["BookingMonthCounts"] as List<int> ?? new List<int>();

    var labelsJson = JsonSerializer.Serialize(bookingLabels);
    var countsJson = JsonSerializer.Serialize(bookingCounts);

    var myRecentBookings = ViewData["MyRecentBookings"] ?? new List<object>();
}

<div class="container py-4">

    <!-- Header / Hero -->
    <div class="p-4 rounded-4 bg-light border mb-4">
        <div class="d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">University Member Dashboard</h2>
                <div class="text-muted">View your bookings, tickets, and upcoming events.</div>
            </div>

            <div class="d-flex gap-2 mt-3 mt-md-0">
                <a class="btn btn-primary" asp-controller="EVENTs" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i> Browse Events
                </a>
                <a class="btn btn-outline-secondary" asp-controller="BOOKINGs" asp-action="MyBookings">
                    <i class="fas fa-ticket-alt"></i> My Bookings
                </a>
                <a class="btn btn-outline-secondary" asp-controller="TICKETs" asp-action="MyTickets">
                    <i class="fas fa-qrcode"></i> My Tickets
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">My Bookings</div>
                            <div class="display-6">@ViewBag.MyBookings</div>
                        </div>
                        <i class="fas fa-ticket-alt fa-3x text-primary opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">My Tickets</div>
                            <div class="display-6">@ViewBag.MyTickets</div>
                        </div>
                        <i class="fas fa-qrcode fa-3x text-success opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Total Payments</div>
                            <div class="display-6">Rs. @ViewBag.MyPaymentsTotal.ToString("N2")</div>
                        </div>
                        <i class="fas fa-credit-card fa-3x text-info opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card shadow-sm h-100 rounded-4 border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="text-muted small">Upcoming Events</div>
                            <div class="display-6">@ViewBag.UpcomingEvents</div>
                        </div>
                        <i class="fas fa-calendar-check fa-3x text-warning opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart + Table -->
    <div class="row g-4">
        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <h5 class="mb-3"><i class="fas fa-chart-line"></i> My Bookings Per Month</h5>
                    <canvas id="bookingChart" height="250"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card shadow-sm rounded-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0"><i class="fas fa-clock"></i> Recent Bookings</h5>
                        <a asp-controller="BOOKINGs" asp-action="MyBookings" class="btn btn-sm btn-outline-primary">
                            View All <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Reference</th>
                                    <th class="text-end">Total</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (dynamic b in (IEnumerable<dynamic>)myRecentBookings)
                                {
                                    <tr>
                                        <td class="fw-bold">@(b.BookingReference ?? "N/A")</td>
                                        <td class="text-end">Rs. @b.TotalAmount</td>
                                        <td>
                                            @if (b.PaymentStatus == "Paid")
                                            {
                                                <span class="badge bg-success">Paid</span>
                                            }
                                            else if (b.PaymentStatus == "Unpaid")
                                            {
                                                <span class="badge bg-warning">Unpaid</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@(b.BookingStatus)</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="BOOKINGs" asp-action="Details" asp-route-id="@b.BookingID"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    new Chart(document.getElementById('bookingChart'), {
        type: 'line',
        data: {
            labels: @Html.Raw(labelsJson),
            datasets: [{
                label: 'Bookings',
                data: @Html.Raw(countsJson),
                borderColor: '#0d6efd',
                backgroundColor: 'rgba(13, 110, 253, 0.1)',
                fill: true,
                tension: 0.3
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    display: false
                }
            }
        }
    });
</script>