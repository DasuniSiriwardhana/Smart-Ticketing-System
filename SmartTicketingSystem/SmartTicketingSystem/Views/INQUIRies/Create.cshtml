@model SmartTicketingSystem.Models.INQUIRY
@{
    var eventTitle = ViewBag.EventTitle;
    var eventID = ViewBag.EventId;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            @if (eventID != null)
            {
                <li class="breadcrumb-item"><a asp-controller="EVENTs" asp-action="Details" asp-route-id="@eventID">@eventTitle</a></li>
            }
            <li class="breadcrumb-item active">Ask a Question</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card inquiry-card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-question-circle me-2"></i>
                        @if (!string.IsNullOrEmpty(eventTitle))
                        {
                            <span>Ask about: @eventTitle</span>
                        }
                        else
                        {
                            <span>Contact Support</span>
                        }
                    </h4>
                </div>
                <div class="card-body p-4">

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Have a question about this event? Fill out the form below and we'll get back to you within 24 hours.
                    </div>

                    <form asp-action="Create" method="post" id="inquiryForm">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @if (eventID != null)
                        {
                            <input type="hidden" name="eventId" value="@eventID" />
                        }

                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-bold">Your Name</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-user text-primary"></i></span>
                                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fas fa-envelope text-primary"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <small class="text-muted">We'll send the response to this email</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="category" class="form-label fw-bold">Category</label>
                            <select asp-for="category" class="form-select">
                                <option value="">Select a category</option>
                                <option value="General">General Question</option>
                                <option value="Booking">Booking Issue</option>
                                <option value="Payment">Payment Question</option>
                                <option value="Tickets">Ticket Problem</option>
                                <option value="Event">Event Details</option>
                                <option value="Refund">Refund Request</option>
                                <option value="Technical">Technical Support</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="message" class="form-label fw-bold">Your Question</label>
                            <textarea asp-for="message" class="form-control" rows="5"
                                      placeholder="Please describe your question or issue in detail..."></textarea>
                            <span asp-validation-for="message" class="text-danger"></span>
                            <small class="text-muted">Maximum 1000 characters</small>
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="fas fa-paper-plane me-2"></i>Submit Question
                            </button>
                            @if (eventID != null)
                            {
                                <a asp-controller="EVENTs" asp-action="Details" asp-route-id="@eventID"
                                   class="btn btn-outline-secondary btn-lg">
                                    Cancel
                                </a>
                            }
                            else
                            {
                                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    Cancel
                                </a>
                            }
                        </div>
                    </form>
                </div>
            </div>

            <!-- FAQ Section -->
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-question-circle me-2 text-primary"></i>Frequently Asked Questions</h5>
                </div>
                <div class="card-body">
                    <div class="accordion" id="faqAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                    How do I book tickets?
                                </button>
                            </h2>
                            <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Simply browse events, select your preferred event, choose ticket types and quantities, then proceed to checkout. You can pay later or complete payment immediately.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                    What payment methods do you accept?
                                </button>
                            </h2>
                            <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    We accept credit/debit cards, bank transfers, and cash payments at select venues. Online payments are processed securely.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                    Can I cancel my booking?
                                </button>
                            </h2>
                            <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    Yes, unpaid bookings can be cancelled anytime. Paid bookings may be subject to our cancellation policy. Check the event details for specific terms.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq4">
                                    How do I get my tickets?
                                </button>
                            </h2>
                            <div id="faq4" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    After successful payment, QR tickets are generated instantly. You can view and download them from "My Tickets" section.
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Character counter for message
        $('#message').on('input', function() {
            var remaining = 1000 - $(this).val().length;
            if (remaining < 0) {
                $(this).val($(this).val().substring(0, 1000));
                remaining = 0;
            }
            $(this).nextAll('small').text(remaining + ' characters remaining');
        });

        // Auto-dismiss alerts
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}

<style>
    .inquiry-card {
        border: none;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

    .input-group-text {
        border-right: none;
    }

    .input-group .form-control {
        border-left: none;
    }

        .input-group .form-control:focus {
            border-color: #dee2e6;
            box-shadow: none;
        }

    .accordion-button:not(.collapsed) {
        background: rgba(67,97,238,0.05);
        color: #4361ee;
    }

    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(67,97,238,0.1);
    }
</style>