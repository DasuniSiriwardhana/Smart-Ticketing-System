@model SmartTicketingSystem.Models.ORGANIZER_UNIT

@{
    ViewData["Title"] = "Create Organizer Unit";
}

<h1>Create Organizer Unit</h1>
<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="unitTime" class="form-label"></label>
                <input asp-for="unitTime" class="form-control" maxlength="100" />
                <span asp-validation-for="unitTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UnitType" class="form-label"></label>
                <input asp-for="UnitType" class="form-control" maxlength="80" />
                <span asp-validation-for="UnitType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactEmail" class="form-label"></label>
                <input asp-for="ContactEmail" class="form-control" maxlength="150" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ContactPhone" class="form-label"></label>
                <input asp-for="ContactPhone" class="form-control" maxlength="20" />
                <span asp-validation-for="ContactPhone" class="text-danger"></span>
            </div>

            <!-- checkbox -->
            <div class="mb-3 form-check">
                <input asp-for="StatusBool" class="form-check-input" />
                <label asp-for="StatusBool" class="form-check-label">Active</label>
            </div>
            <span asp-validation-for="StatusBool" class="text-danger"></span>

            <!-- CreatedAt is not going to be typed by the user-->
            <input type="hidden" asp-for="CreatedAt" value="@DateTime.Now" />

            <div class="d-flex gap-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
